<odoo>
    <record id="access_bank_statement" model="ir.model.access">
        <field name="name">bank_statement</field>
        <field name="model_id" ref="model_bank_statement"/>
        <field name="group_id" ref="account.group_account_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="access_bank_statement2" model="ir.model.access">
        <field name="name">bank_statement2</field>
        <field name="model_id" ref="model_bank_reconciliation_report_book_bank"/>
        <field name="group_id" ref="account.group_account_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="access_bank_statement_import" model="ir.model.access">
        <field name="name">bank_statement_import</field>
        <field name="model_id" ref="model_bank_statement_import_wizard"/>
        <field name="group_id" ref="account.group_account_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

      <record id="bank_statement_form_view" model="ir.ui.view">
        <field name="name">bank.statement.form</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
            <form string="Bank Statement Reconciliation">
                <sheet>
                    <header>
                        <button name="bank_statement_report" type="object" string="Reporte de Conciliacion"
                                class="btn-primary" readonly="stage == 'finalizada'"/>
                        <button name="action_generate_excel" type="object" string="Generar Excel"
                                 class="btn-success" invisible="stage == 'finalizada'"/>
                        <button name="cerrar_conciliacion" type="object" string="Cerrar Conciliación"
                                class="btn-secondary" readonly="stage == 'finalizada'" invisible="stage == 'finalizada'"/>
                        <field name="stage" widget="statusbar" statusbar_visible="nueva,en_proceso,finalizada"
                               invisible="stage == 'finalizada'"/>
                    </header>
                    <group>
                        <group>
                            <field name="journal_id" force_save="1" readonly="stage == 'finalizada'"
                                   invisible="stage == 'finalizada'"/>
                            <field name="account_id" force_save="1" readonly="1"/>
                            <!-- <field name="currency_id" invisible="1"/> -->
                            <field name="saldo_anterior" force_save="1" invisible="1"/>
                            <field name="saldo_anterior_informe" force_save="1" readonly="1"/>
                            <field name="saldo_inicial" readonly="stage == 'finalizada'"/>
                            <field name="obtener_valores" readonly="stage == 'finalizada'" invisible="stage == 'finalizada'"/>
                        </group>
                        <group>
                            <field name="date_from" help="Solo para el reporte" readonly="stage == 'finalizada'"/>
                            <field name="date_to" readonly="stage == 'finalizada'"/>
                            <field name="imprimir_responsable"/>
                            <field name="reporte_al_cierre"/>
                        </group>
                    </group>

                    <group>
                        <field name="statement_lines" nolabel="1" colspan="2" readonly="stage == 'finalizada'">
                            <tree create="false" editable="bottom" default_order="date" delete="false">
                                <field name="date" readonly="1"/>
                                <field name="move_id" readonly="1" optional="hide" groups="account.group_account_user"/>
                                <field name="name" optional="hide" readonly="1"/>
                                <field name="ref" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="descripcion"/>
                                <!-- <field name="amount_currency" readonly="1" optional="hide"/> -->
                                <field name="currency_id" readonly="1" optional="hide"/>
                                <field name="check_number" optional="hide" readonly="1" force_save="1"/>
                                <field name="date_maturity" optional="hide" readonly="1"/>
                                <field name="statement_date"/>
                                <field name="company_currency_id" optional="hide" readonly="1"/>
                                <!-- <field name="debit" string="Deb Original" readonly="1"/> -->
                                <!-- <field name="credit" string="Cre Original" readonly="1"/> -->
                                <!-- <field name="amount_currency" string="Amount Curr"/> -->
                                <field name="debito_abs" string="Débito" invisible="0" readonly="1"/>
                                <field name="credito_abs" invisible="0" string="Crédito" readonly="1"/>
                                <field name="saldo" invisible="0" readonly="1" force_save="1"/>
                            </tree>
                        </field>
                    </group>

                    <notebook invisible="1">
                        <page string="Líneas Importadas">
                            <field name="imported_line_ids">
                                <tree string="Líneas Importadas">
                                    <field name="date"/>
                                    <field name="ref"/>
                                    <field name="statement_date"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="balance"/>
                                    <field name="amount_currency"/>
                                </tree>
                                <form string="Línea Importada">
                                    <group>
                                        <field name="ref"/>
                                        <field name="statement_date"/>
                                        <field name="date"/>
                                        <field name="debit"/>
                                        <field name="credit"/>
                                        <field name="balance"/>
                                        <field name="amount_currency"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>

                    <group class="oe_subtotal_footer oe_right">
                        <!-- <field name="gl_balance" string="Movimiento en libro banco de la compañia"/> -->
                        <field name="saldo_final_informe" string="Movimiento en libro banco de la compañia"/>
                        <!-- <field name="balance_difference" string="Montos no reflejados en el extracto bancario "/> -->
                        <field name="saldo_not_date" string="Montos no reflejados en el extracto bancario "/>
                        <field name="saldo_inicial_cierre" force_save="1"/>
                        <!-- <field name="saldo_inicial" force_save="1" readonly="1"/> -->
                        <!-- <field name="diferencia" force_save="1"/> -->
                    </group>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>


    <record id="bank_statement_tree_view" model="ir.ui.view">
        <field name="name">bank.statement.tree</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
            <tree string="Bank Statements">
                <field name="journal_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="gl_balance"/>
                <field name="saldo_inicial_cierre"/>
                <field name="stage"/>
            </tree>
        </field>
    </record>

    <record id="action_bank_statement_form" model="ir.actions.act_window">
        <field name="name">Bank Statement Reconciliation</field>
        <field name="res_model">bank.statement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'skip_account_move_synchronization': True}</field>
        <field name="view_id" ref="bank_statement_tree_view"/>
    </record>

    <menuitem id="menu_bank_statement" name="Conciliación bancaria" parent="account.menu_finance_entries_actions"
              action="action_bank_statement_form" sequence="25"/>

</odoo>

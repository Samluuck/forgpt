<odoo>

    <menuitem id="despachos.administracion_menu" name="AdministraciÃ³n" parent="despachos_menu_root"/>

    <record id="despachos.ordenpago_view_tree" model="ir.ui.view">
        <field name="name">despachos.ordenpago.view.tree</field>
        <field name="model">despachos.ordenpago</field>
        <field name="arch" type="xml">
            <tree string="Ordenes de Pago">
                <field name="name" />
                <field name="despacho" />
                <field name="empleado" />
                <field name="fecha" />
                <field name="monto" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="despachos.ordenpago_view_form" model="ir.ui.view">
        <field name="name">despachos.ordenpago.view.form</field>
        <field name="model">despachos.ordenpago</field>
        <field name="arch" type="xml">
            <form string="Orden de Pago">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <field name="despacho" />
                        <field name="empleado" />
                    </group>
                    <group>
                        <field name="fecha" />
                        <field name="vencimiento" />
                        <field name="monto" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="despachos.ordenpago_action" model="ir.actions.act_window">
        <field name="name">Ordenes de Pago</field>
        <field name="res_model">despachos.ordenpago</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="despachos.ordenpago_menu" name="Ordenes de Pago" action="despachos.ordenpago_action" parent="despachos.administracion_menu" sequence="10"/>

    <record id="despachos.pago_view_tree" model="ir.ui.view">
        <field name="name">despachos.pago.view.tree</field>
        <field name="model">despachos.pago</field>
        <field name="arch" type="xml">
            <tree string="Pagos">
                <field name="name" />
                <field name="fecha" />
                <field name="monto"/>
                <field name="comprobante" />
                <field name="cuenta" />
            </tree>
        </field>
    </record>

    <record id="despachos.pago_view_form" model="ir.ui.view">
        <field name="name">despachos.pago.view.form</field>
        <field name="model">despachos.pago</field>
        <field name="arch" type="xml">
            <form string="Pago">
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <field name="fecha" />
                        <field name="monto" />
                    </group>
                    <group>
                        <field name="comprobante" />
                        <field name="cuenta" />
                    </group>
                    <label for="op"/>
                    <field name="op"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="despachos.pago_action" model="ir.actions.act_window">
        <field name="name">Pagos</field>
        <field name="res_model">despachos.pago</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="despachos.pago_menu" name="Pagos" action="despachos.pago_action" parent="despachos.administracion_menu" sequence="10"/>
</odoo>

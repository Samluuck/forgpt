    <menuitem id="despachos.documento_oficializacion_menu_list" name="Documentos Oficializaciones" action="despachos.documento_oficializacion_action"
              parent="despachos.despacho_menu"/>

    <menuitem id="despachos.my_despacho_menu_list" name="Mis órdenes de trabajo" action="despachos.my_despacho_action"
              parent="despachos.despacho_menu"/>

    <menuitem id="despachos.despacho_this_year_menu_list" name="Órdenes de trabajo de este año"
              action="despachos.despacho_this_year_action"
              parent="despachos.despacho_menu"/>

</odoo>

    <record id="despachos.despacho_view_search" model="ir.ui.view">
        <field name="name">despachos.despacho.view.search</field>
        <field name="model">despachos.despacho</field>
        <field name="arch" type="xml">
            <search string="Despachos">
                <field name="ot"/>
                <field name="ref_propietario"/>
                <field name="state"/>
                <field name="fecha"/>
                <field name="regimen"/>
                <field name="propietario"/>
                <field name="aduana"/>
                <field name="consignatario"/>
                <field name="proveedor"/>
                <field name="transportista"/>
                <field name="mercaderias_model"/>
                <field name="fob"/>
                <field name="flete"/>
                <field name="seguro"/>
                <field name="documentos_sin_monto"/>
                <field name="create_uid" string="Creado Por"/>
                <field name="create_date" string="Fecha de creación"/>
                <field name="write_uid" string="Actualizado Por"/>
                <field name="write_date" string="Fecha de actualización"/>
                <filter string="Mis órdenes de trabajo" name="my_ots" domain="[('employee_id.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Este año" name="this_year"
                        domain="[('fecha','&lt;=', time.strftime('%%Y-12-31')),('fecha','&gt;=',time.strftime('%%Y-01-01'))]"/>
                <filter string="Este mes" name="this_month"
                        domain="[('fecha','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('fecha','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="Mes pasado" name="prev_month"
                        domain="[('fecha','&gt;=',(context_today()-relativedelta(months=1)).strftime('%%Y-%%m-01')),('fecha','&lt;',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="Oficializaciones Este mes" name="this_month_oficializacion"
                        domain="[('fecha_oficializacion','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('fecha','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="Oficializaciones Mes pasado" name="prev_month_oficializacion"
                        domain="[('fecha_oficializacion','&gt;=',(context_today()-relativedelta(months=1)).strftime('%%Y-%%m-01')),('fecha','&lt;',time.strftime('%%Y-%%m-01'))]"/>
                <separator/>
                <group name="Group by" expand="0">
                    <filter name="group_by_propietario" string="Propietario" domain="[]"
                            context="{'group_by':'propietario'}" help="Agrupado por propietario"/>
                    <filter name="group_by_fecha" string="Fecha" domain="[]" context="{'group_by':'fecha'}"
                            help="Agrupado por fecha"/>
                </group>

            </search>
        </field>
    </record>

    <record id="despachos.despacho_view_kanban" model="ir.ui.view">
        <field name="name">despachos.despacho.view.kanban</field>
        <field name="model">despachos.despacho</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column o_kanban_project_tasks">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="ot"/>
                                </strong>
                                <ul>
                                    <li>Consignatario :
                                        <field name="consignatario"/>
                                    </li>
                                    <li>Proveedor :
                                        <field name="proveedor"/>
                                    </li>
                                    <li>Fecha :
                                        <field name="fecha"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="despachos.despacho_view_form" model="ir.ui.view">
        <field name="name">despachos.despacho.view.form</field>
        <field name="model">despachos.despacho</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    <button name="button_imprimir_ot_web" type="object" string="Imprimir OT Web" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_get_attachment_view" class="oe_stat_button" icon="fa-file-text-o"
                                type="object">
                            <field name="attachment_number" widget="statinfo" string="Documents"
                                   options="{'reload_on_button': true}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="ot" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="fecha" colspan="2"/>
                            <field name="regimen" colspan="2"/>
                            <field name="regimen_name" invisible="1"/>
                            <field name="resolucion_maq" colspan="2"
                                   attrs="{'invisible': [('regimen_name','!=','IT02'),('regimen_name','!=','IT03'),('regimen_name','!=','EM01'),('regimen_name','!=','IC12'),('regimen_name','!=','EVM1'),('regimen_name','!=','IVM1'),('regimen_name','!=','IT06'),('regimen_name','!=','IT16'),('regimen_name','!=','ZF2M'),('regimen_name','!=','ZF3M')]}"/>
                        </group>
                        <group>
                            <field name="propietario"/>
                            <field name="cod_propietario" invisible="1"/>
                            <field name="ref_propietario"/>
                            <field name="aduana"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="proveedor"/>
                            <field name="consignatario"/>
                            <field name="transportista"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="mercaderias_model" options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="due" attrs="{'invisible': [('regimen_name','!=','IC04')]}"/>
                        </group>
                        <group>
                            <field name="embalaje"/>
                            <field name="cantidad"/>
                            <field name="unidad_medida"/>
                        </group>
                        <group>
                            <field name="peso_neto"/>
                            <field name="peso_bruto"/>
                        </group>
                        <group>
                            <field name="cif"/>
                            <field name="moneda"/>
                            <field name="tc"/>
                            <field name="cif_guaranies"/>
                        </group>
                    </group>
                    <group>
                        <field name="contenedores">
                            <tree>
                                <field name="tipo"/>
                                <field name="numero"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="tipo"/>
                                    <field name="numero"/>
                                </group>
                            </form>
                        </field>
                    </group>
                    <notebook>
                        <page name="datos" string="Datos">
                            <group>
                                <field name="incoterms"/>
                                <field name="fob"/>
                                <field name="flete"/>
                                <field name="seguro"/>
                                <field name="ajuste"/>
                                <field name="descuento"/>
                            </group>
                            <group>
                                <field name="documentos">
                                    <tree editable="bottom">
                                        <field name="tipo" options="{'no_create_edit': True, 'no_create': True}"/>
                                        <field name="numero"/>
                                        <field name="archivo"/>
                                        <field name="fecha"/>
                                        <field name="original"/>
                                        <field name="visado"/>
                                        <!--
                                        <field name="create_uid" string="Creado Por"/>
                                        <field name="create_date" string="Fecha de creación"/>
                                        <field name="write_uid" string="Actualizado Por"/>
                                        <field name="write_date" string="Fecha de actualización"/>
                                        -->

                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="tipo"/>
                                            </group>
                                            <group>
                                                <field name="numero"/>
                                                <field name="archivo"/>
                                            </group>
                                            <group>
                                                <field name="fecha"/>
                                            </group>

                                        </group>
                                        <group>
                                            <field name="original"/>
                                            <field name="visado"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                            <group>
                                <field name="desconsolidacion" attrs="{'invisible': [('regimen_name','!=','IC04')]}"/>
                                <field name="manifiesto"/>
                                <field name="barcaza_model"/>
                            </group>
                            <group>
                                <field name="cnu"
                                       attrs="{'invisible': [('regimen_name','!=','IT02'),('regimen_name','!=','IT03'),('regimen_name','!=','EM01'),('regimen_name','!=','IC12'),('regimen_name','!=','EVM1'),('regimen_name','!=','IVM1'),('regimen_name','!=','IT06'),('regimen_name','!=','IT16'),('regimen_name','!=','ZF2M'),('regimen_name','!=','ZF3M')]}"/>
                                <field name="acuerdo"
                                       attrs="{'invisible': [('regimen_name','!=','EC01'),('regimen_name','!=','IC13'),('regimen_name','!=','DSEM'),('regimen_name','!=','EC15'),('regimen_name','!=','EM01'),('regimen_name','!=','EC02'),('regimen_name','!=','EC03'),('regimen_name','!=','ET01'),('regimen_name','!=','ET02'),('regimen_name','!=','IC01'),('regimen_name','!=','IC02'),('regimen_name','!=','EVM1'),('regimen_name','!=','ECL1'),('regimen_name','!=','ERR1'),('regimen_name','!=','EC04'),('regimen_name','!=','ZF2E'),('regimen_name','!=','EC09')]}"/>
                            </group>

                        </page>

                        <page name="gabinete" string="Gabinete">
                            <group>
                                <field name="documentos_sin_monto">
                                    <tree editable="bottom">
                                        <field name="tipo" options="{'no_create_edit': True, 'no_create': True}"/>
                                        <field name="numero"/>
                                        <field name="archivo"/>
                                        <field name="fecha"/>
                                        <field name="vencimiento"/>
                                        <field name="monto"/>
                                        <field name="imputar"/>
                                        <!--
                                        <field name="create_uid" string="Creado Por"/>
                                        <field name="create_date" string="Fecha de creación"/>
                                        <field name="write_uid" string="Actualizado Por"/>
                                        <field name="write_date" string="Fecha de actualización"/>
                                        -->
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="tipo"/>
                                                <field name="numero"/>
                                                <field name="archivo"/>
                                            </group>
                                            <group>
                                                <field name="fecha"/>
                                                <field name="vencimiento"/>
                                            </group>
                                            <group>
                                                <field name="monto"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page name="oficializacion" string="Oficialización">
                            <group>
                                <group>
                                    <field name="oficial"/>
                                    <field name="documento"/>
                                    <field name="documento_cuerpo"/>
                                    <field name="canal"/>
                                    <field name="fecha_oficializacion"/>
                                </group>
                                <group>
                                    <field name="firmado" attrs="{'invisible': [('regimen_name','!=','IC04'),]}"/>
                                    <field name="aduanero" attrs="{'invisible': [('regimen_name','!=','IC04'),]}"/>
                                    <field name="definitivo" attrs="{'invisible': [('regimen_name','!=','IC04'),]}"/>
                                </group>
                            </group>
                            <group>
                                <field name="documentos_oficializacion">
                                    <tree editable="top">
                                        <field name="tipo" options="{'no_create_edit': True, 'no_create': True}"/>
                                        <field name="numero"/>
                                        <field name="documento"/>
                                        <field name="monto"/>
                                        <field name="imputar"/>
                                        <!--
                                        <field name="create_uid" string="Creado Por"/>
                                        <field name="create_date" string="Fecha de creación"/>
                                        <field name="write_uid" string="Actualizado Por"/>
                                        <field name="write_date" string="Fecha de actualización"/>
                                        -->
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="tipo"/>
                                                <field name="numero"/>
                                                <field name="documento"/>
                                            </group>
                                            <group>
                                                <field name="monto"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page name="liquidacion" string="Liquidacion">
                            <group>
                                <group>
                                    <field name="numero_factura"/>
                                    <field name="fecha_facturacion"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                </div>
            </form>
        </field>
    </record>


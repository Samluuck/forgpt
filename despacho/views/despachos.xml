                        <button name="button_imprimir_ot_web" type="object" string="Imprimir OT Web" class="oe_highlight"/>
                        
                        <!-- Bot√≥n para volver a pendiente -->
                        <button name="action_reset_to_pending" 
                                type="object" 
                                string="Volver a Pendiente" 
                                class="btn-warning"
                                icon="fa-arrow-left"
                                invisible="state not in ['initial']"
                                confirm="¬øEst√° seguro que desea volver al estado PENDIENTE? Solo es posible si no hay documentos en Gabinete."/>

                        <!-- Bot√≥n para volver a iniciado desde oficializado -->
                        <button name="action_iniciar" 
                                type="object" 
                                string="Volver a Iniciado" 
                                class="btn-info"
                                icon="fa-undo"
                                invisible="state != 'oficializado'"
                                confirm="¬øEst√° seguro que desea volver al estado INICIADO desde OFICIALIZADO?"/>
                        
                        <!-- Bot√≥n para oficializar -->
                        <button name="action_oficializar" 
                                type="object" 
                                string="OFICIALIZAR" 
                                class="btn-primary"
                                icon="fa-file-text"
                                invisible="state not in ['initial', 'liquidado']"
                                confirm="¬øEst√° seguro que desea OFICIALIZAR este despacho? Verifique que tenga 'Documento Oficializado' y 'T/C' completos."/>
                        
                        <!-- Bot√≥n para liquidar -->
                        <button name="action_liquidar" 
                                type="object" 
                                string="LIQUIDAR" 
                                class="btn-success"
                                icon="fa-money"
                                invisible="state != 'oficializado'"
                                confirm="¬øEst√° seguro que desea LIQUIDAR este despacho? Esta acci√≥n cambiar√° el estado a LIQUIDADO."/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_get_attachment_view" class="oe_stat_button" icon="fa-file-text-o"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Documents"
                                       options="{'reload_on_button': true}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="ot" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="fecha" colspan="2"/>
                                <field name="regimen" colspan="2"/>
                                <field name="regimen_name" invisible="1"/>
                                <field name="resolucion_maq" colspan="2" invisible="1"/>
                            </group>
                            <group>
                                <field name="propietario"/>
                                <field name="cod_propietario" invisible="1"/>
                                <field name="ref_propietario"/>
                                <field name="aduana"/>
                                <field name="pais_origen"/>
                                <field name="crt"/>
                                <field name="partida_arancelaria"/>
                                <field name="imponible_usd"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="proveedor"/>
                                <field name="consignatario"/>
                                <field name="transportista"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="mercaderias_model" options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="due" invisible="1"/>
                            </group>
                            <group>
                                <field name="embalaje"/>
                                <field name="cantidad"/>
                                <field name="unidad_medida"/>
                            </group>
                            <group>
                                <field name="peso_neto"/>
                                <field name="peso_bruto"/>
                            </group>
                            <group>
                                <field name="cif"/>
                                <field name="moneda"/>
                                <field name="tc"/>
                                <field name="cif_guaranies" readonly = "1"/>
                            </group>
                        </group>
                        <group>
                            <field name="contenedores">
                                <tree>
                                    <field name="tipo"/>
                                    <field name="numero"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="tipo"/>
                                        <field name="numero"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                        <notebook>
                            <page name="datos" string="Datos">
                                <div class="alert alert-warning" 
                                    invisible="documento == False or datos_verificados == True"
                                    role="alert">
                                    <strong>‚ö†Ô∏è VERIFICACI√ìN REQUERIDA:</strong> Se ha cargado un documento de oficializaci√≥n. 
                                    <br/>Por favor verifique todos los campos de esta pesta√±a: <strong>Incoterms, FOB, Flete, Seguro, Ajuste, Descuento</strong> y la tabla de <strong>Documentos</strong>.
                                    <br/>
                                    <button name="action_verificar_datos"
                                            string="DATOS VERIFICADOS"
                                            type="object"
                                            class="btn-success mt-2"
                                            icon="fa-check"
                                            confirm="¬øConfirma que ha revisado todos los campos en esta pesta√±a (Incoterms, FOB, Flete, Seguro, Ajuste, Descuento y Documentos)?"/>
                                </div>
                                <div class="alert alert-success" 
                                    invisible="datos_verificados == False"
                                    role="alert">
                                    <strong>‚úÖ DATOS VERIFICADOS:</strong> Los datos han sido verificados correctamente.
                                </div>
                                <group>
                                    <field name="incoterms"/>
                                    <field name="fob"/>
                                    <field name="flete"/>
                                    <field name="seguro"/>
                                    <field name="ajuste"/>
                                    <field name="descuento"/>
                                </group>
                                <group>
                                    <field name="documentos">
                                        <tree editable="bottom">
                                            <field name="tipo" options="{'no_create_edit': False, 'no_create': False}"/>
                                            <field name="numero"/>
                                            <field name="archivo"/>
                                            <field name="fecha"/>
                                            <field name="original"/>
                                            <field name="visado"/>
                                            <field name="monto"/>
                                            <field name="imputar"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <group>
                                                    <field name="tipo"/>
                                                    <field name="factura_proveedor_id" can_open="True"/>
                                                </group>
                                                <group>
                                                    <field name="numero"/>
                                                    <field name="archivo"/>
                                                </group>
                                                <group>
                                                    <field name="fecha"/>
                                                </group>
                                            </group>
                                            <group>
                                                <field name="original"/>
                                                <field name="visado"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                                <group col="3">
                                    <field name="manifiesto"/>
                                    <field name="barcaza_model"/>
                                    <field name="total_datos"/>
                                    <field name="total_datos_imputar"/>
                                    <field name="recepciones_datos_id" colspan="1"/>
                                    <field name="desconsolidacion" invisible="1"/>
                                     <!-- <button name="action_crear_recepcion_datos"
                                        type="object"
                                        string="Crear Recepci√≥n"
                                        class="btn-primary"
                                        icon="fa-truck"/> -->

                                </group>
                                <group>
                                    <field name="cnu" invisible="1"/>
                                    <field name="acuerdo" invisible="1"/>
                                </group>
                            </page>

                            <page name="gabinete" string="Gabinete">
                                <div class="alert alert-info" 
                                    invisible="state != 'initial'"
                                    role="alert">
                                    <strong>‚ÑπÔ∏è Estado:</strong> El despacho est√° en estado <strong>INICIADO</strong> porque hay documentos cargados en Gabinete.
                                    <br/><small>Para volver a PENDIENTE, elimine todos los documentos de esta pesta√±a o use el bot√≥n "Volver a Pendiente" en el header.</small>
                                </div>
                                <group>
                                    <separator string=" " colspan="4"/>
                                    <field name="documentos_sin_monto">
                                        <tree editable="bottom">
                                            <field name="numero_orden"/>
                                            <field name="tipo" options="{'no_create_edit': False, 'no_create': False}"/>
                                            <field name="factura_proveedor_id"/>
                                            <field name="numero"/>
                                            <field name="archivo"/>
                                            <field name="fecha"/>
                                            <field name="vencimiento"/>
                                            <field name="monto" readonly="0"/>
                                            <field name="pagado_cliente"/>
                                            <field name="imputar"/>

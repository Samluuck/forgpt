<odoo>
    <!-- Add instructor field to existing view -->
    <record model="ir.ui.view" id="partner_despacho_form_view">
        <field name="name">partner.despacho</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <group position="before">
                <group>
                    <group>
                        <field name="codigo"/>
                    </group>
                </group>
            </group>

            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="string">RUC</attribute>
            </xpath>

            <notebook position="inside">
                <page name="documentos" string="Documentos">
                    <field name="documento_cliente">
                        <tree>
                            <field name="tipo_documento"/>
                            <field name="vencimiento"/>
                        </tree>
                        <form>
                            <group>
                                <field name="tipo_documento"/>
                                <field name="archivo"/>
                                <field name="vencimiento"/>
                            </group>
                        </form>
                    </field>
                </page>
            </notebook>

        </field>
    </record>

    <record model="ir.actions.act_window" id="contact_list_action">
        <field name="name">Contactos</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="despachos.contacts_menu" name="Contactos" parent="despachos_menu_root"/>

    <menuitem id="contact_menu" name="Contactos"
              parent="despachos.contacts_menu"
              action="contact_list_action"/>

    <record model="ir.ui.view" id="hr_expense_despacho_form_view">
        <field name="name">hr.expense.view.form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="ot"/>
            </field>
        </field>
    </record>

</odoo>

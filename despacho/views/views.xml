        <field name="model">despachos.tipo_contenedor</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tipo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="despachos.tipo_contenedor_action" model="ir.actions.act_window">
        <field name="name">Tipos de contenedores</field>
        <field name="res_model">despachos.tipo_contenedor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="despachos.tipo_contenedor_menu_list" name="Tipos de contenedores"
              action="despachos.tipo_contenedor_action" parent="despachos.configuracion_menu"/>

    <record model="ir.ui.view" id="despachos.tipo_documento_list">

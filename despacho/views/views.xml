<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="despachos.aduana_list">
        <field name="name">Aduanas</field>
        <field name="model">despachos.aduana</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="despachos.aduana_view_form" model="ir.ui.view">
        <field name="name">despachos.aduana.view.form</field>
        <field name="model">despachos.aduana</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="codigo"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="despachos.aduana_action" model="ir.actions.act_window">
        <field name="name">Aduanas</field>
        <field name="res_model">despachos.aduana</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="despachos.mercaderia_action" model="ir.actions.act_window">
        <field name="name">Mercaderías</field>
        <field name="res_model">despachos.mercaderia</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="despachos_menu_root" name="Despachos" sequence="1" web_icon="despachos,static/description/icon.png"/>

    <menuitem id="despachos.configuracion_menu" name="Configuraciones" parent="despachos_menu_root"/>

    <menuitem id="despachos.aduana_menu_list" name="Aduanas" action="despachos.aduana_action"
              parent="despachos.configuracion_menu"/>

    <menuitem id="despachos.mercaderia_menu_list" name="Mercaderías" action="despachos.mercaderia_action"
              parent="despachos.configuracion_menu"/>

    <record model="ir.ui.view" id="despachos.mercaderia_list">
        <field name="name">Mercaderías</field>
        <field name="model">despachos.mercaderia</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <!--<field name="description"/>-->
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="despachos.tipo_contenedor_list">
        <field name="name">Tipos de contenedores</field>
        <field name="model">despachos.tipo_contenedor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="tipo"/>
            </tree>
        </field>
    </record>

    <record id="despachos.tipo_contenedor_view_form" model="ir.ui.view">

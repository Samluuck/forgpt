    <record model="ir.ui.view" id="despachos.moneda_list">
        <field name="name">Monedas</field>
        <field name="model">despachos.moneda</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="codigo"/>
            </tree>
        </field>
    </record>

    <record id="despachos.moneda_view_form" model="ir.ui.view">
        <field name="name">despachos.moneda.view.form</field>
        <field name="model">despachos.moneda</field>
        <field name="arch" type="xml">

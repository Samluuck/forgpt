              parent="despachos.configuracion_menu"/>

    <record model="ir.ui.view" id="despachos.regimen">
        <field name="name">Regímenes</field>
        <field name="model">despachos.regimen</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="categoria"/>
            </tree>
        </field>
    </record>
    <record id="despachos.regimen_view_search" model="ir.ui.view">
        <field name="name">despachos.regimen.view.search</field>
        <field name="model">despachos.regimen</field>
        <field name="arch" type="xml">
            <search string="Regímenes">
                <group expand="0" string="Group By...">
                    <filter name="group_by_category" string="Category" icon="terp-partner"
                            context="{'group_by':'categoria'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="despachos.regimen_view_form" model="ir.ui.view">
        <field name="name">despachos.regimen.view.form</field>
        <field name="model">despachos.regimen</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="categoria"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="despachos.regimen_action" model="ir.actions.act_window">
        <field name="name">Regímenes</field>
        <field name="res_model">despachos.regimen</field>
        <field name="context">{'search_default_group_by_category': 1}</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="despachos.regimen_view_search"/>

    </record>

    <menuitem id="despachos.regimen_menu_list" name="Regímenes" action="despachos.regimen_action"
              parent="despachos.configuracion_menu"/>

</odoo>

<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_despacho_document">
        <!--Encargado de mostrar el layout con el membrete de la empresa-->
        <t t-call="web.external_layout">

            <div class="page">
                <div class="oe_structure"/>
                <h2 class="mt16">
                    <span t-field="doc.ot"/>
                </h2>
            </div>

            <div class="row mt32 mb32" id="cabecera">
                <div class="col-auto mw-100 mb-2">
                    <strong>Fecha:</strong>
                    <p class="m-0" t-field="doc.fecha"/>
                </div>
                <div class="col-auto mw-100 mb-2">
                    <strong>Regimen:</strong>
                    <p class="m-0" t-field="doc.regimen.name"/>
                </div>
                <div class="col-auto mw-100 mb-2">
                    <strong>Propietario:</strong>
                    <p class="m-0" t-field="doc.propietario"/>
                </div>
                <div class="col-auto mw-100 mb-2">
                    <strong>Aduana:</strong>
                    <p class="m-0" t-field="doc.aduana"/>
                </div>
            </div>
            <div class="row mt32 mb32" id="cabecera">
                <div class="col-auto mw-100 mb-2">
                    <strong>Proveedor:</strong>
                    <p class="m-0" t-field="doc.proveedor"/>
                </div>
                <div class="col-auto mw-100 mb-2">
                    <strong>Consignatario:</strong>
                    <p class="m-0" t-field="doc.consignatario"/>
                </div>
                <div class="col-auto mw-100 mb-2">
                    <strong>Transportista:</strong>
                    <p class="m-0" t-field="doc.transportista"/>
                </div>
            </div>
            <div class="col-auto mw-100 mb-2">
                <strong>Mercaderia:</strong>
                <p class="m-0" t-field="doc.mercaderia_model"/>
            </div>
        </t>
    </template>

    <template id="report_despacho">
        <!--Si solo usamos web container entonces utiliza la pantalla en blanco sin membrete-->
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="despachos.report_despacho_document"/>
            </t>
        </t>
    </template>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_account_voucher_inherit" model="ir.ui.view">
            <field name="name">Account Voucher</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_purchase_receipt_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
					<field name="tipo_comprobante" domain="[('tipo', 'in',('6','7') )]" options="{'no_create': True, 'no_open':True}" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
					<field name="number_card_credit_debit" string="Número de la tarjeta de crédito/debito" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
					<field name="bank_id" string="Nombre del Banco/Financiera/Cooperativa"  options="{'no_create': True, 'no_open':True}" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
                    <field name="partner_external" string="Proveedor Exterior" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
                    <field name="nro_cuenta_corriente_caja_ahorro" string="Número de Cuenta Corriente / Caja de ahorro" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
                    <field name="razon_social_banco_financiera_cooperativa" string="Razón Social del Banco/Financiera/Cooperativa" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
                    <field name="nro_comprobante" string="Nro de comprobante/transacción" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
                    <field name="razon_social_bien_servicio" string="Nombre o Razón Social / Descripción del Bien o Servicio" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
                     <field name="presenta_rg90_ingreso_egreso" invisible="True"/>
				 </xpath>
            </field>
        </record>
</odoo>
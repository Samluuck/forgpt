<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
            <record id="action_run_rg90" model="ir.actions.act_window">
            <field name="name">RG90</field>
            <field name="res_model">account.book.rg90</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
         </record>

         <menuitem id="registrar_rg90" name=" Generar Reportes RG90" parent="account.menu_finance_entries"
                  action="action_run_rg90"/>

         <record model="ir.ui.view" id="rg90_form_view">
            <field name="name">account.rg90.wizard.form</field>
            <field name="model">account.book.rg90</field>
            <field name="arch" type="xml">
                <form string="Reportes Action">
                    <p> RG90</p>
                    <group >
                        <field name="tipo" required="1" />
                        <!--<field name="report_type" invisible="1" />-->
                        <!--<field name="desde" attrs="{'invisible': [('report_type', '!=', 'iva')]}"  />-->
                        <!--<field name="hasta" attrs="{'invisible': [('report_type', '!=', 'iva')]}"  />-->
                        <field name="mes"  required="1" />
<!--                        <field name="name" invisible="1" />-->
                        <field name="periodo" required="1"   />
                        <field name="solo_txt"   />


<!--                        <field name="tipo_presentacion" required="1"  />-->
<!--                        <field name="archivo" filename="name" invisible="1"/>-->
                    </group>

                    <footer>
                        <button string="Confirmar" name="generar_informe" type="object" class="oe_highlight"/>
                        o
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>



    <record id="tipo_documento_form_view_inh" model="ir.ui.view">
            <field name="name">tipo.documento.form.inh</field>
            <field name="model">ruc.tipo.documento</field>
            <field name="inherit_id" ref="paraguay_backoffice.tipo_documento_form_view" />
            <field name="arch" type="xml">
            	<field name="codigo_hechauka" position="after">

            		<field name="codigo_rg90"/>
            	</field>
            </field>
         </record>


        <record model="ir.ui.view" id="tipo_identificacion_tree_view">
            <field name="name">tipo.identificacion.tree</field>
            <field name="model">ruc.tipo.identificacion</field>
            <field name="arch" type="xml">
                <tree string="Comprobantes">
                    <field name="name"/>
                    <field name="comentario"/>

                    <field name="codigo_rg90"/>


                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tipo_identificacion_form_view">
            <field name="name">tipo.identificacion.form</field>
            <field name="model">ruc.tipo.identificacion</field>
            <field name="arch" type="xml">
                <form string="Identificacion">

                    <sheet>

                            <group>
                            <field name="name" />

                            <field name="codigo_rg90"/>

                            <field name="comentario"/>

                            </group>




                    </sheet>
                </form>
            </field>
        </record>

          <record model="ir.ui.view" id="tipo_identificacion_search_view">
            <field name="name">tipo.identificacion.search</field>
            <field name="model">ruc.tipo.identificacion</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                     <field name="codigo_rg90"/>


                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_identificacion">
            <field name="name">Tipos de Identificacion RG90</field>
            <field name="res_model">ruc.tipo.identificacion</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <!-- <field name="context">{'search_default_vinculado':1}</field> -->
            <field name="context">{ }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Tipos de Identificacion
                </p>
            </field>
        </record>

        <menuitem action="action_identificacion" id="menu_action_identificacion" parent="account.menu_finance_entries"  />



    </data>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

	 <record id="view_account_voucher_sale_inherit" model="ir.ui.view">
            <field name="name">Account Voucher</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_sale_receipt_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
					<field name="tipo_comprobante" domain="[('tipo', 'in',('5','7') )]" options="{'no_create': True, 'no_open':True}" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
				    <field name="tipo_documento" attrs="{'invisible':[('presenta_rg90_ingreso_egreso','=',False)]}"/>
				    <field name="presenta_rg90_ingreso_egreso" invisible="True"/>
                </xpath>
            </field>
         </record>
</odoo>
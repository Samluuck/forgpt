<?xml version="1.0" encoding="utf-8"?>
<odoo>

		 <record id="view_invoice_inherit_ype" model="ir.ui.view">
            <field name="name">Herencia Facturar Type</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
            	<field name = "partner_id" position="after">


            		<field name="tipo_rg90" invisible="1"/>

            	</field>
                <field name = "invoice_incoterm_id" position="before">
					<field name="virtual" />
            		<field name="imputa_iva" attrs="{'readonly':[('state','!=','draft')]}"/>
            		<field name="imputa_ire" attrs="{'readonly':[('state','!=','draft')]}"/>
            		<field name="imputa_irp_rsp" attrs="{'readonly':[('state','!=','draft')]}"/>
					<field name="no_imputa" attrs="{'readonly':[('state','!=','draft')]}"/>


            	</field>
            </field>
         </record>
	 <record id="view_company_inherit_type" model="ir.ui.view">
				<field name="name">Herencia Company Type</field>
				<field name="model">res.company</field>
				<field name="inherit_id" ref="base.view_company_form" />
				<field name="arch" type="xml">
					<field name = "currency_id" position="after">
						<field name="imputa_iva"/>
            		<field name="imputa_ire"/>
            		<field name="imputa_irp_rsp"/>
            		<field name="presenta_rg90_ingreso_egreso"/>
					</field>
				</field>
	 </record>




</odoo>
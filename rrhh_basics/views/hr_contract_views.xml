<odoo>
    <record id="view_form_contract_asistencia_marcacion" model="ir.ui.view">
        <field name="name">hr.contract.form.asis_marc</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hr_responsible_id']" position="after">
                <field name="asis_marc" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
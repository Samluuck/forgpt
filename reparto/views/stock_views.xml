<odoo>
    <data>
        <record id="stock_picking_form_reparto" model="ir.ui.view">
            <field name="name">stock.picking.form.reparto</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="location_id" position="after">
                    <field name="tipo_entrega" readonly="1"/>
                    <field name="reparto_id" attrs="{'invisible' : [('reparto_id','=',False)]}"/>
                </field>
            </field>
        </record>
        <record id="stock_picking_filter_reparto" model="ir.ui.view">
            <field name="name">stock.picking.filter.reparto</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <filter name="delivery" string="Para Reparto" domain="[('tipo_entrega','=','delivery')]" help="Para reparto"/>
                    <filter name="local" string="Para Retiro" domain="[('tipo_entrega','=','local')]" help="Para retiro"/>
                </field>
            </field>
        </record>
        <record id="stock_picking_tree_reparto" model="ir.ui.view">
            <field name="name">stock.picking.tree.reparto</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="city" />
                    <field name="barrio" />
                </field>
            </field>
        </record>
    </data>
</odoo>

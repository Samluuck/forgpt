<odoo>
  <data>
        <record model="ir.ui.view" id="partner_chofer_form_inh">
            <field name="name">res.partner.reparto.inh</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                    <field name="category_id" position="after">
                        <field name="chofer" groups="reparto.group_reparto_invoice,reparto.group_reparto_stock_picking"/>
                    </field>
                <xpath expr="//field[@name='ruc']" position="attributes">
                    <attribute name="attrs">{'required':['|',('chofer','=', False),'|',('customer', '=', True),('supplier','=',True) , '&amp;',  ('esinternacional', '=', False),('ci', '=', False)],'invisible': [('esinternacional','=',True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='ci']" position="attributes">
                    <attribute name="attrs">{'required':[('chofer','=', True)]}</attribute>
                </xpath>


            </field>
        </record>

        <record id="partner_chofer_view_tree" model="ir.ui.view">
           <field name="name">chofer_tree._reparto</field>
            <field name="model">res.partner</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <tree string="Choferes" >
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                </tree>
            </field>
        </record>

      <record id="action_chofer_tree_reparto" model="ir.actions.act_window">
            <field name="name">CHOFERES</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="partner_chofer_view_tree"/>
            <field name="context">{'default_chofer':True,'default_customer':False}</field>
            <field name="domain">[('chofer','=',True)]</field>
        </record>
  </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report
            id="action_reparto_report"
            model="delivery.order.parent"
            string="Planilla de Entrega"
            report_type="qweb-pdf"
            name="reparto.reparto_acuse_report"
            file="reparto.reparto_acuse_report"

        />
    </data>

        <template id="reparto_acuse_report">
             <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
              <t t-call="web.basic_layout">
                <div class="page">
                    <link rel="stylesheet" href="/reparto/reports/reparto.css"/>
                    <div class="row">
                        <div class="col-xs-6">
                            <h3 class="text-left">Planilla de Entrega de Documentos</h3>
                        </div>
                         <div class=" text-right col-xs-4">

                             <p>Fecha de generacion del informe: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/></p>


                          </div>
                    </div>
                    <hr class="linea"/>
                    <div class="row">
                        <div class="col-xs-6">
                            <p><b>Chofer:</b><span t-field="o.chofer_id.name"/></p>

                        </div>
                        <div class="col-xs-6">
                            <p><b>Fecha de Salida:</b><span t-field="o.fecha_salida"/></p>

                        </div>

                    </div>
                    <div class="row">
                       <div class="col-xs-6">
                            <p><b>Vehiculo:</b><span t-field="o.vehiculo_id.name"/></p>

                        </div>
                        <div class="col-xs-6">
                            <p><b>Reparto:</b><span t-field="o.name"/></p>

                        </div>

                    </div>


                    <div class="row">
                        <table class="table table-striped tabla">
                            <thead>
                                <tr>
                                    <th class="text-center">Cliente</th>
                                    <th class="text-center">Tipo</th>
                                    <th class="text-center">Fecha</th>
                                    <th class="text-center">Numero</th>
                                    <th class="text-center">Monto</th>
                                    <th class="text-center">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set='total' t-value="0"/>
                                <t t-set='saldo' t-value="0"/>
                                <t t-foreach="o.delivered_documents" t-as="e">

                                    <tr>
                                        <td class="letra-mediana"><span t-field="e.partner_id.name"/> </td>
                                        <td class="letra-mediana"><span t-field="e.tipo_documento"/> </td>
                                        <t t-if='e.invoice_id'>
                                            <td><span t-field="e.invoice_id.date_invoice"/></td>
                                        </t>
                                        <t t-else="">
                                           <td> <span t-field="e.picking_id.scheduled_date"/></td>
                                        </t>
                                        <t t-if='e.invoice_id'>
                                           <td> <span t-field="e.invoice_id.nro_factura"/></td>
                                        </t>
                                        <t t-else="">

                                            <td><span t-if="e.picking_id.numero_remision"><span t-field="e.picking_id.numero_remision"/></span></td>
                                        </t>

                                        <t t-if='e.invoice_id'>
                                            <td class="text-right"><span t-field="e.invoice_id.amount_total"/></td>
                                            <t t-set='total' t-value="total+e.invoice_id.amount_total"/>

                                        </t>
                                        <t t-else="">
                                           <td>N/A</td>
                                        </t>
                                        <t t-if='e.invoice_id'>
                                            <td class="text-right"><span t-field="e.invoice_id.residual"/></td>
                                            <t t-set='saldo' t-value="saldo+e.invoice_id.residual"/>

                                        </t>
                                        <t t-else="">
                                           <td>N/A</td>
                                        </t>

                                    </tr>
                                </t>
                                <tr class="active">
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td  class="text-right"><b>Totales</b></td>
                                    <td class="text-right"><b><span t-esc="total"/></b></td>
                                    <td class="text-right"><b><span t-esc="saldo"/></b></td>
                                </tr>
                            </tbody>
                        </table>
                    </div> <!-- row -->
                    <hr class="linea"/>
                     <div class="row">
                        <div class="col-xs-12">


                          <span>Recibi conforme los documentos arriba detallados</span>
                          </div>
                            <div class="col-xs-12">
                              <span>Firma:_________________________________</span>
                              <br/>
                            </div>


                            <div class="col-xs-12">
                              <span>Aclaracion:_____________________________</span>
                              <br/>
                              </div>
                                <div class="col-xs-12">
                                  <span>CI. Nro:________________________________</span>
                                  <br/>
                              </div>
                    </div>

                </div> <!-- end page -->
              </t>
            </t>
        </t>

        </template>


</odoo>

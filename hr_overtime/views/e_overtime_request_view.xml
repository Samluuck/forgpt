<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="seq_overtime_req" model="ir.sequence">
            <field name="name">Overtime Sequencer</field>
            <field name="code">hr.overtime</field>
            <field name="prefix">OVT-</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field name="padding">5</field>
        </record>
    </data>
    <data>
        <!-- Views -->
        <!-- Form View -->
        <record id="hr_overtime_form_view_updated" model="ir.ui.view">
            <field name="name">Time In Lieu</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <form string="Solicitud de Horas Extras">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ready,f_approve,approved,refused"/>

                        <!-- Botón para registrar la solicitud - TODOS los usuarios -->
                        <button name="submit_to_f" string="Registrar Solicitud" type="object"
                                class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>

                        <!-- Botón "Listo para Aprobar" - Solo RRHH y Administradores -->
                        <button name="mark_ready_to_approve" string="Listo para Aprobar" type="object"
                                class="btn-info" attrs="{'invisible': [('state', '!=', 'ready')]}"
                                groups="hr_documenta.rrhh_responsable2,hr.group_hr_manager"/>

                        <!-- Botón para aprobar - Cuando esté en f_approve -->
                        <button name="approve" string="Aprobar" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'f_approve')]}" 
                                groups="hr_documenta.rrhh_responsable2,hr.group_hr_manager,hr.group_hr_user,base.group_user"/>

                        <!-- Botón para rechazar - Cuando esté en f_approve -->
                        <button name="reject" string="Rechazar" type="object" class="btn-danger"
                                attrs="{'invisible': [('state', '!=', 'f_approve')]}"
                                groups="hr_documenta.rrhh_responsable2,hr.group_hr_manager,hr.group_hr_user,base.group_user"/>

                        <!-- Botón para volver a borrador - Solo RRHH y Administradores -->
                        <button name="reset_to_draft" string="Volver a Borrador" type="object" class="btn-secondary"
                                attrs="{'invisible': [('state', '!=', 'refused')]}"
                                groups="hr_documenta.rrhh_responsable2,hr.group_hr_manager"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="0"
                                       placeholder="Reference ...."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name='employee_id'
                                    options="{'no_quick_create': True, 'no_create_edit' : True}" 
                                    attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    placeholder="Selecciona el empleado para la solicitud"/>
                                <field name='department_id'/>
                                <field name='job_id'/>
                                <field name='manager_id'/>
                                <!-- Campo del aprobador de horas extras -->
                                <field name="aprobador_hhee" 
                                       string="Aprobadores de HHEE" 
                                       readonly="1"
                                       widget="many2many_tags"/>
                                <field name="duration_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="current_user_boolean"
                                       invisible="1"/>
                            </group>
                            <group>
                                <field name='current_user' invisible="1"/>
                                <field name="contract_id" groups="hr_documenta.rrhh_responsable2,hr.group_hr_manager" readonly="1"/>
                                <field name='attchd_copy'
                                       filename="attchd_copy_name"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name='type'  attrs="{'readonly': True}"/>
                                
                                <!-- CAMPO TIPO DE HORAS EXTRAS: Solo visible para RRHH cuando está en 'ready' o 'f_approve' -->
                                <field name="overtime_type_id" 
                                       string="Tipo de Horas Extras" 
                                       groups="hr_documenta.rrhh_responsable2,hr.group_hr_manager" 
                                       attrs="{'readonly': [('state', 'not in', ['ready', 'f_approve'])], 
                                               'invisible': [('state', 'in', ['draft', 'approved', 'refused'])], 
                                               'required': [('state', 'in', ['ready', 'f_approve'])]}"/>
                                
                                <!-- Campo Monto por Horas -->
                                <field name="cash_hrs_amount" force_save="1"
                                       attrs="{'invisible': ['|','|',('state', 'in', ['draft', 'ready']),('type','!=', 'cash'),('duration_type','!=','hours')]}"
                                       string="Monto por Horas"/>

                                <!-- Campo Monto por Días -->
                                <field name="cash_day_amount" force_save="1"
                                       attrs="{'invisible': ['|','|',('state', 'in', ['draft', 'ready']),('type','!=', 'cash'),('duration_type','!=','days')]}"
                                       string="Monto por Días"/>

                                <field name="attchd_copy_name" invisible="1"/>
                                <field name="leave_id"
                                       attrs="{'invisible': [('leave_id', '=', False)],'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date_from" required="1"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="date_to" required="1"
                                       class="oe_inline"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="days_no_tmp" string="Horas" attrs="{'invisible': [('duration_type', '=', 'days')]}"/>
                                <field name="days_no_tmp" string="Días" attrs="{'invisible': [('duration_type', '=', 'hours')]}"/>
                                <field name="payslip_paid" readonly="1" attrs="{'invisible': [('type','!=', 'cash')]}" widget="toggle_button" groups="hr.group_hr_manager, hr_documenta.rrhh_responsable2"/>
                                <field name="days_no" readonly="1"
                                       invisible="1"/>
                            </group>
                            <group>
                                <div>
                                    <separator string="Feriado"/>
                                    <field name="public_holiday" readonly="1"
                                           force_save="1"/>
                                </div>
                                <div>
                                    <separator string="Domingo"/>
                                    <field name="domingo" readonly="1"
                                           force_save="1"/>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripción de trabajo" name="work_description">
                                <field name="desc"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </page>
                            <page string="Asistencia">
                                <field name="attendance_ids" readonly="1"/>
                            </page>
                            <page string="Horario de trabajo">
                                <field name="work_schedule" readonly="1"/>
                            </page>
                            <page string="Ausencias globales">
                                <field name="global_leaves"/>
                            </page>
                            <page string="Horas Extras Detalladas" 
                                  attrs="{'invisible': [('state', 'in', ['draft', 'ready'])]}">
                                <group>
                                    <group string="Horas Extra Diurnas">
                                        <field name="diurnal_hours" string="Horas extra diurnas"/>
                                        <field name="cash_hrs_diurnal_amount" string="Pago"/>
                                    </group>
                                    <group string="Horas Extra Nocturnas">
                                        <field name="nocturnal_hours" string="Horas extra nocturnas"/>
                                        <field name="cash_hrs_nocturnal_amount" string="Pago"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View con agrupación por departamento CORREGIDA -->
        <record id="hr_overtime_tree_view" model="ir.ui.view">
            <field name="name">Overtime</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <tree string="Solicitud de Horas Extras">
                    <field name="employee_id"/>
                    <field name="aprobador_hhee" string="Aprobadores" widget="many2many_tags"/>
                    <field name="department_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="days_no_tmp"/>
                    <field name="state" decoration-info="state == 'draft'" 
                           decoration-warning="state == 'ready'" 
                           decoration-primary="state == 'f_approve'"
                           decoration-success="state == 'approved'"
                           decoration-danger="state == 'refused'"/>
                    <field name="type" invisible="1"/>
                    <field name="payslip_paid" groups="hr.group_hr_manager, hr_documenta.rrhh_responsable2" readonly="1" attrs="{'invisible': [('type','!=', 'cash')]}" widget="toggle_button"/>
                </tree>
            </field>
        </record>

        <!-- Vista de búsqueda con filtros MEJORADA -->
        <record id="hr_overtime_search_view" model="ir.ui.view">
            <field name="name">hr.overtime.search</field>
            <field name="model">hr.overtime</field>
            <field name="arch" type="xml">
                <search string="Búsqueda de Horas Extras">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="state"/>
                    <field name="aprobador_hhee"/>
                    
                    <!-- Filtros predefinidos -->
                    <filter string="Mis Solicitudes" name="my_requests" 
                            domain="[('employee_id.user_id', '=', uid)]"/>
                    
                    <filter string="Mis Aprobaciones Pendientes" name="my_approvals" 
                            domain="['|', '|', '|',
                                    ('employee_id.aprobador_hhee.user_id', '=', uid),
                                    ('employee_id.parent_id.user_id', '=', uid),
                                    ('employee_id.department_id.manager_id.user_id', '=', uid),
                                    '&amp;', ('employee_id.aprobador_hhee', '=', False), ('state', 'in', ['ready', 'f_approve'])]"/>
                    
                    <filter string="Pendientes de Configurar" name="pending_config"
                            domain="[('state', '=', 'ready')]"/>
                    
                    <filter string="Listas para Aprobar" name="ready_approve"
                            domain="[('state', '=', 'f_approve')]"/>
                    
                    <separator/>
                    
                    <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Listo para Configurar" name="ready" domain="[('state', '=', 'ready')]"/>
                    <filter string="En Espera de Aprobación" name="waiting" domain="[('state', '=', 'f_approve')]"/>
                    <filter string="Aprobadas" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Rechazadas" name="refused" domain="[('state', '=', 'refused')]"/>
                    
                    <!-- Agrupaciones CORREGIDAS -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Empleado" name="group_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Departamento" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Fecha" name="group_date" context="{'group_by': 'date_from:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Actions -->
        <!-- Acción principal de horas extras -->
        <record id="hr_overtime_action" model="ir.actions.act_window">
            <field name="name">Solicitud de Horas Extras</field>
            <field name="res_model">hr.overtime</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_overtime_search_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haz clic para crear una nueva Solicitud de Aprobación Previa de Horas Extras.
                </p>
            </field>
        </record>

        <!-- Acción para "Mis Aprobaciones Pendientes" CON CONTEXTO AUTOMÁTICO -->
        <record id="hr_overtime_my_approvals_action" model="ir.actions.act_window">
            <field name="name">Mis Aprobaciones Pendientes</field>
            <field name="res_model">hr.overtime</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_overtime_search_view"/>
            <field name="context">{'search_default_my_approvals': 1, 'search_default_group_department': 1}</field>
            <field name="domain">[
                '|', '|', '|', '|',
                ('employee_id.aprobador_hhee.user_id', '=', uid),
                ('employee_id.parent_id.user_id', '=', uid),
                ('employee_id.department_id.manager_id.user_id', '=', uid),
                '&amp;', ('employee_id.aprobador_hhee', '=', False), ('state', 'in', ['ready', 'f_approve']),
                ('state', 'in', ['ready', 'f_approve'])
            ]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No tienes solicitudes pendientes de aprobación.
                </p>
            </field>
        </record>

        <!-- NUEVA: Acción para RRHH - Solicitudes Pendientes de Configuración -->
        <record id="hr_overtime_pending_config_action" model="ir.actions.act_window">
            <field name="name">Solicitudes Pendientes de Configuración</field>
            <field name="res_model">hr.overtime</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_overtime_search_view"/>
            <field name="context">{'search_default_pending_config': 1, 'search_default_group_department': 1}</field>
            <field name="domain">[('state', '=', 'ready')]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No hay solicitudes pendientes de configuración.
                </p>
            </field>
        </record>

        <!-- MenuItems -->
        <menuitem id="overtime_submenu" name="Solicitud de Horas Extras"
                  groups="base.group_user" web_icon="hr_overtime,static/description/overtime_icon.png"/>
        
        <menuitem id="overtime" name="Solicitud de Horas Extras"
                  parent="overtime_submenu"
                  action="hr_overtime_action"
                  groups="base.group_user"/>

        <!-- Menú para Mis Aprobaciones Pendientes -->
        <menuitem id="overtime_my_approvals" name="Mis Aprobaciones Pendientes"
                  parent="overtime_submenu"
                  action="hr_overtime_my_approvals_action"
                  groups="base.group_user"/>

        <!-- NUEVO: Menú para RRHH - Solicitudes Pendientes de Configuración -->
        <menuitem id="overtime_pending_config" name="Pendientes de Configuración"
                  parent="overtime_submenu"
                  action="hr_overtime_pending_config_action"
                  groups="hr_documenta.rrhh_responsable2,hr.group_hr_manager"/>

    </data>
</odoo>
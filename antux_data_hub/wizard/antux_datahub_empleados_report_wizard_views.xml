<odoo>
    <record id="view_empleados_report_wizard_form" model="ir.ui.view">
        <field name="name">antux.datahub.empleados.report.wizard.form</field>
        <field name="model">antux.datahub.empleados.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte Empleados / Obreros">
                <group>
                    <field name="report_type" widget="radio"/>
                </group>
                <footer>
                    <button string="Generar" type="object" name="action_print_report" class="btn btn-success"/>
                    <button string="Cancelar" special="cancel" class="btn btn-danger" />
                </footer>
            </form>
        </field>
    </record>
</odoo>

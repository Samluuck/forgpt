<odoo>
    <record id="view_antux_datahub_sueldos_jornales_report_wizard" model="ir.ui.view">
        <field name="name">antux.datahub.sueldos.jornales.report.wizard.form</field>
        <field name="model">antux.datahub.sueldos.jornales.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte Sueldos y Jornales">
                <group>
                    <field name="report_type" widget="radio"/>
                    <field name="year" attrs="{'invisible': [('report_type', '!=', 'anual')], 'required': [('report_type', '=', 'anual')]}"/>
                    <field name="company_id" attrs="{'invisible': [('report_type', '!=', 'anual')], 'required': [('report_type', '=', 'anual')]}"/>
                </group>
                <footer>
                    <button name="action_print_report" type="object" string="Generar" class="btn btn-success"/>
                    <button string="Cancelar" class="btn btn-danger" special="cancel"/>
                </footer>
            </form>

        </field>
    </record>
</odoo>

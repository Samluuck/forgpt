<odoo>
    <record id="view_antux_datahub_ips_report_wizard" model="ir.ui.view">
        <field name="name">antux.datahub.ips.report.wizard.form</field>
        <field name="model">antux.datahub.ips.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar reporte IPS">
                <group>
                    <field name="report_type" widget="radio"/>
                </group>

                <footer>
                    <button name="action_print_report" type="object" string="Generar" class="btn btn-success"/>
                    <button string="Cancelar" class="btn btn-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

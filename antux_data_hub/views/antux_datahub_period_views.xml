<odoo>

    <!-- Vista árbol -->
    <record id="view_datahub_period_tree" model="ir.ui.view">
        <field name="name">antux.datahub.period.tree</field>
        <field name="model">antux.datahub.period</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_datahub_period_form" model="ir.ui.view">
        <field name="name">antux.datahub.period.form</field>
        <field name="model">antux.datahub.period</field>
        <field name="arch" type="xml">
            <form string="Período">
                <sheet>

                    <!-- Identificación -->
                    <group>
                        <field name="name"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>

                    <!-- Rango de fechas -->
                    <group string="Rango del período">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_datahub_period" model="ir.actions.act_window">
        <field name="name">Períodos</field>
        <field name="res_model">antux.datahub.period</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>

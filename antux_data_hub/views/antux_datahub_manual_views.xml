<odoo>
    <record id="view_antux_datahub_manual_form" model="ir.ui.view">
        <field name="name">antux.datahub.manual.form</field>
        <field name="model">antux.datahub.manual</field>
        <field name="arch" type="xml">
            <form string="Manual de Uso" create="false" delete="false">
                <sheet>
                    <div class="oe_title" style="margin: 0 auto; display: table;">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="content" widget="html" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_antux_datahub_manual" model="ir.actions.server">
        <field name="name">Manual de Uso</field>
        <field name="model_id" ref="model_antux_datahub_manual"/>
        <field name="state">code</field>
        <field name="code">action = model.load_manual()</field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--    Voucher-->
         <record id="view_voucher_form_check_inh" model="ir.ui.view">
            <field name="name">view.voucher.form.inh.check</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_voucher.view_purchase_receipt_form"/>
            <field name="arch" type="xml">
             <xpath expr="//field[@name='account_id']" position="replace">
                 <field name="extranjero" invisible="1"/>
                        <field name="balance_foreign_account" attrs="{'invisible': [('extranjero','=',False)]}"/>
                        <field name="balance" attrs="{'invisible': [('extranjero','=',True)]}"/>
                <field name="account_id" groups="account.group_account_user" attrs="{'invisible':[('pay_now','=','pay_now')]}"/>
                  <field name="type_journal" invisible="1"/>
                  <field name="verificar_pago_cheque" invisible="1"/>
                  <field name="currency_id" invisible="1"/>
                    <field name="check_id" context="{'default_type':'issue_check','default_pago_voucher':[active_id]}" attrs="{'invisible':[('type_journal','!=', 'issue_check')]}" domain="[('pago_voucher','=', False),('voucher_id','=', False)]"/>
             </xpath>
                <xpath expr="//field[@name='currency_id']" position="attributes">
                    <attribute name="domain">[('ambito','in',('compra',False))]</attribute>
                </xpath>

            </field>
        </record>

        <record id="view_vendor_voucher_check_check_form" model="ir.ui.view">
            <field name="name">account.voucher.form.inherit.check.check</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_sale_receipt_form"/>
            <field name="arch" type="xml">

            <xpath expr="//field[@name='account_id']" position="replace">

                    <field name="account_id" groups="account.group_account_user" attrs="{'invisible':[('pay_now','=','pay_now')]}"/>
                    <field name="type_journal" invisible="1"/>
                    <field name="check_third_id" context="{'form_view_ref':'account_check.view_account_check_third_form','default_type':'third_check','default_pago_voucher':active_id}" attrs="{'invisible':[('type_journal','!=', 'third_check')]}"/>
                    <!-- <field name="current_number" attrs="{'invisible':[('payment_subtype','!=', 'issue_check')]}" context="{'default_type':'issue_check','from_voucher':True,'default_journal_id':journal_id,'default_amount': total_sin_retencion}" class="oe_edit_only"/> -->
                    <!-- <field name="number" attrs="{'invisible':[('payment_subtype','!=', 'issue_check')]}" context="{'default_type':'issue_check','from_voucher':True,'default_journal_id':journal_id,'default_amount': total_sin_retencion}"/> -->
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="attributes">
                    <attribute name="domain">[('ambito','in',('venta',False))]</attribute>
                </xpath>


            </field>
        </record>
        <record id="view_vendor_payment_check_form" model="ir.ui.view">
            <field name="name">account.voucher.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='ref']" position="after">

                     <h3 style="color:#5882FA" attrs="{'invisible':[('payment_subtype','!=', 'issue_check')]}">Datos del cheque </h3>
                     <hr/>
                     <field name="checks_amount" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible':[('payment_subtype','=', False)]}"/>
                    <field name="payment_subtype" invisible="1"/>
                    <!-- <field name="current_number" attrs="{'invisible':[('payment_subtype','!=', 'issue_check')]}" context="{'default_type':'issue_check','from_voucher':True,'default_journal_id':journal_id,'default_amount': total_sin_retencion}" class="oe_edit_only"/> -->
                    <!-- <field name="number" attrs="{'invisible':[('payment_subtype','!=', 'issue_check')]}" context="{'default_type':'issue_check','from_voucher':True,'default_journal_id':journal_id,'default_amount': total_sin_retencion}"/> -->
                </xpath>
                <xpath expr="//form/sheet/group" position="after">
                    <notebook attrs="{'invisible':['|',('payment_subtype','!=', 'third_check'),('payment_type','!=', 'inbound')]}">
                      <field name="payment_subtype" invisible="1"/>
                         <page string="Cheques terceros" >
                            <field name="received_third_check_ids" context="{'default_date':date,'default_amount':amount,'default_currency_id':currency_id}" />
                        </page>
                    </notebook>
                    <notebook attrs="{'invisible':['|',('payment_subtype','!=', 'issue_check'),('payment_type','!=', 'outbound')]}">
                      <field name="payment_subtype" invisible="1"/>
                         <page string="Cheques propios" >
                            <field name="issued_check_ids" context="{'default_type':'issue_check','from_voucher':True,'default_journal_id':journal_id,'default_issue_date':date,'default_amount': amount}"/>
                        </page>
                    </notebook>
                  </xpath>
            </field>
        </record>
          <record model="ir.ui.view" id="cobros_form_view_inh_register">
            <field name="name">account.payment.register.cheque.inh</field>
            <field name="model">account.payment.register</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="cheque_tercero" invisible="0"/>
                    </group>
                      <group string="Datos del Cheque" attrs="{'invisible':[('cheque_tercero','!=',True)],'required':[('cheque_tercero','=',True)]}">
                        <field name="banco_cheque_recibo" attrs="{'invisible':[('cheque_tercero','!=',True)],'required':[('cheque_tercero','=',True)]}"  string="Banco del Cheque" widget="selection"/>
                        <field name="titular_recibo" attrs="{'invisible':[('cheque_tercero','!=',True)],'required':[('cheque_tercero','=',True)]}" string="Titular"/>
                        <field name="nro_cuenta_recibo" attrs="{'invisible':[('cheque_tercero','!=',True)],'required':[('cheque_tercero','=',True)]}"/>
                        <field name="numero_cheque_recibo" attrs="{'invisible':[('cheque_tercero','!=',True)],'required':[('cheque_tercero','=',True)]}" string="Numero del Cheque"/>
                        <field name="fecha_cheque_recibo" attrs="{'invisible':[('cheque_tercero','!=',True)],'required':[('cheque_tercero','=',True)]}" string="Fecha Emision"/>
                        <field name="fecha_cheque_diferido" attrs="{'invisible':[('cheque_tercero','!=',True)],'required':[('cheque_tercero','=',True)]}" string="Fecha Pago Cheque"/>
                    </group>
                </form>
            </field>
        </record>



        <!--Customer Receipt Pop Up Form-->


    </data>
</odoo>

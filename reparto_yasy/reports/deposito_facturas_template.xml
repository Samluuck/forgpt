<odoo>
    <template id="deposito_facturas_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">

                        <div style="display: flex; justify-content: space-between;">
                            <div><strong>"Nombre de la compañía"</strong></div>
                            <div><strong>Fecha: <t t-esc="doc.fecha_salida.strftime('%d/%m/%Y') if doc.fecha_salida else ''"/></strong></div>
                        </div>

                        <h2 style="margin-top: 15px;">"Depósito de facturas"</h2>

                        <div style="margin-top: 10px;">
                            <p>Chofer = <t t-esc="doc.chofer_id.name or ''"/></p>
                            <p>Entregado a = <t t-esc="doc.entregado_a or ''"/></p>
                        </div>

                        <table class="table table-sm table-bordered" style="margin-top: 20px; width: 100%;">
                            <thead>
                                <tr>
                                    <th>Clientes</th>
                                    <th style="text-align: center;">Efectivo</th>
                                    <th style="text-align: center;">Cheque</th>
                                    <th style="text-align: center;">Transferencia</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.filtered_lines" t-as="line">
                                    <tr>
                                        <td><t t-esc="line.invoice_id.partner_id.name"/></td>
                                        <td style="text-align: center;">✓</td>
                                        <td style="text-align: center;">✓</td>
                                        <td style="text-align: center;">✓</td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <p style="margin-top: 20px;">Monto total = gs.</p>

                        <div style="margin-top: 40px;">
                            <p>Firma</p>
                            <p>_______________</p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="deposito_facturas_report_template">
    <t t-call="web.minimal_layout">
      <div class="page">
        <h2 style="text-align:center;">Dep√≥sito de Facturas</h2>

        <table style="width:100%; margin-top:20px;">
          <tr>
            <td><strong>Chofer:</strong> <t t-esc="docs[0]['chofer_id'].name"/></td>
            <td><strong>Entregado a:</strong> <t t-esc="docs[0]['entregado_a']"/></td>
          </tr>
          <tr>
            <td><strong>Desde:</strong> <t t-esc="data['fecha_inicio']"/></td>
            <td><strong>Hasta:</strong> <t t-esc="data['fecha_fin']"/></td>
          </tr>
        </table>

        <br/>
        <table style="width:100%; border-collapse: collapse; margin-top: 30px;" border="1">
          <thead>
            <tr style="background-color: #eaeaea;">
              <th style="padding:5px;">#</th>
              <th style="padding:5px;">Cliente</th>
              <th style="padding:5px;">Factura</th>
              <th style="padding:5px;">Fecha Salida</th>
            </tr>
          </thead>
          <tbody>
            <tr t-foreach="docs[0]['repartos']" t-as="rep" t-set="index" t-value="0">
              <td style="padding:5px;"><t t-esc="rep.index() + 1"/></td>
              <td style="padding:5px;"><t t-esc="rep.invoice_id.partner_id.name"/></td>
              <td style="padding:5px;"><t t-esc="rep.invoice_id.number or rep.invoice_id.name"/></td>
              <td style="padding:5px;"><t t-esc="rep.fecha_salida.strftime('%Y-%m-%d %H:%M') if rep.fecha_salida else ''"/></td>
            </tr>
          </tbody>
        </table>

        <br/><br/><br/>
        <p style="text-align:right;">
          ____________________________<br/>
          Firma del responsable
        </p>
      </div>
    </t>
  </template>
</odoo>

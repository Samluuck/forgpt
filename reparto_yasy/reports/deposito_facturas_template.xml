<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="deposito_facturas_report_template">
        <!-- Usamos layout vacío sin encabezado corporativo -->
        <t t-call="web.minimal_layout">
            <div class="page" style="font-size:13px; padding:30px;">

                <!-- Cabecera -->
                <div style="display: flex; justify-content: space-between;">
                    <div><strong>"<t t-esc="user.company_id.name"/>”</strong></div>
                    <div><strong>Fecha: <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/></strong></div>
                </div>

                <!-- Título -->
                <h3 style="margin-top: 25px;">"Depósito de Facturas"</h3>

                <!-- Datos generales -->
                <div style="margin-top: 10px; line-height: 1.5;">
                    <p>Chofer = <t t-esc="docs[0]['chofer_id'].name or ''"/></p>
                    <p>Entregado a = <t t-esc="docs[0]['entregado_a'] or ''"/></p>
                </div>

                <!-- Tabla de clientes -->
                <table class="table table-sm table-bordered" style="margin-top: 25px; width: 100%; border-collapse: collapse;" border="1">
                    <thead>
                        <tr>
                            <th style="padding: 5px;">Clientes</th>
                            <th style="padding: 5px; text-align: center;">Efectivo</th>
                            <th style="padding: 5px; text-align: center;">Cheque</th>
                            <th style="padding: 5px; text-align: center;">Transferencia</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs[0]['repartos']" t-as="line">
                            <tr>
                                <td style="padding: 5px;"><t t-esc="line.invoice_id.partner_id.name"/></td>
                                <td style="text-align: center;">✓</td>
                                <td style="text-align: center;">✓</td>
                                <td style="text-align: center;">✓</td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <!-- Total y Firma -->
                <div style="margin-top: 40px;">
                    <p>Monto total = gs.</p>
                </div>

                <div style="margin-top: 60px;">
                    <p>Firma</p>
                    <p>_______________</p>
                </div>

            </div>
        </t>
    </template>
</odoo>

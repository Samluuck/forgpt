<odoo>
  <data>
    <record id="paperformat_recibo_triplicado" model="report.paperformat">
      <field name="name">Recibo Triplicado</field>
      <field name="default" eval="True"/>
      <field name="format">custom</field>
      <field name="page_height">356</field>
      <field name="page_width">216</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">1</field>
      <field name="margin_bottom">0</field>
      <field name="margin_left">0</field>
      <field name="margin_right">0</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">0</field>
      <field name="dpi">96</field>
    </record>

    <!-- Un solo reporte que genera los 3 recibos -->
    <report
      id="recibo_triplicado_boton"
      model="account.invoice"
      string="Recibo Triplicado"
      name="factura_sanfernando.report_recibo_triplicado"
      file="factura_sanfernando.report_recibo_triplicado"
      paperformat="paperformat_recibo_triplicado"
      report_type="qweb-pdf"
      print_report_name="'Recibo Triplicado - %s' % (object.number or '')"/>
  </data>
</odoo>
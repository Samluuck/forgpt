<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hechauka_form_view">
            <field name="name">account.hechauka.wizard.form</field>
            <field name="model">set.hechauka</field>
            <field name="arch" type="xml">
                <form string="Reportes Action">
                    <p> Hechauka</p>
                    <group >
                        <field name="tipo" required="1" />
                        <!--<field name="report_type" invisible="1" />-->
                        <!--<field name="desde" attrs="{'invisible': [('report_type', '!=', 'iva')]}"  />-->
                        <!--<field name="hasta" attrs="{'invisible': [('report_type', '!=', 'iva')]}"  />-->
                        <field name="mes"  required="1" />
                        <field name="name" invisible="1" />
                        <field name="periodo" required="1"   />

                        
                        <field name="tipo_presentacion" required="1"  />
                        <field name="archivo" filename="name" invisible="1"/>
                    </group>

                    <footer>
                        <button string="Confirmar" name="generar_informe" type="object" class="oe_highlight"/>
                        o
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="set_hechauka_archivo_tree" >
      <field name="name">set.hechauka.archivo</field>
      <field name="model">set.hechauka.archivo</field>
      <field name="type">tree</field>

      <field name="arch" type="xml" >
        <tree string="informes"   edit="false" create="false"    >
          <field name="name"  string="Periodo"/>
          <field name="filename"  string="Nombre"/>
          <field name="periodo"  string="Tipo"/>
          <field name="archivo" string="Archivo" widget="download_link" filename="filename" />
          <field name="mes" string="Mes" />
            <field name="anio" />
        </tree>
      </field>
    </record>

        <record id="set_hechauka_archivo_action" model="ir.actions.act_window">
    <field name="name">Consultar Informes Hechauka</field>
    <field name="res_model">set.hechauka.archivo</field>
<!--    <field name="view_type">form</field>-->
    <field name="view_mode">tree</field>
  </record>

        <record id="action_run_hechauka" model="ir.actions.act_window">
            <field name="name">Hechauka</field>
            <field name="res_model">set.hechauka</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
         </record>

         <menuitem id="registrar_hechauka" name=" Generar Reportes Hechauka" parent="account.menu_finance_entries"
                  action="action_run_hechauka"/>
        <menuitem action="set_hechauka_archivo_action" name=" Descargar Archivos Hechauka" id="set_hechauka_archivo_menu"	parent="account.menu_finance_entries" />
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <record model="ir.ui.view" id="ruc_documentos_timbrados_tree_view">
            <field name="name">ruc.documentos.timbrados</field>
            <field name="model">ruc.documentos.timbrados</field>
            <field name="arch" type="xml">
                <tree string="Talonario">
                    <field name="name"/>
                    <field name="nombre_documento"/>
                    <field name="tipo_documento"/>
                    <field name="fecha_inicio" />
                    <field name="fecha_final"/>
                    <field name="ultimo_nro_utilizado"/>
                    <field name="nro_ini"/>
                    <field name="nro_actual" optional="hide"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ruc_documentos_timbrados_form_view">
            <field name="name">ruc.documentos.timbrados_form</field>
            <field name="model">ruc.documentos.timbrados</field>
            <field name="arch" type="xml">
                <form string="Talonario">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="nombre_documento" />
                                <field name="tipo_documento"/>
                                <field name="fecha_inicio"/>
                                <field name="fecha_final"/>
                                <field name="nro_autorizacion_autoimpresor"/>
                                <field name="activo"/>

                            </group>

                            <group>
                                <field name="suc"/>
                                <field name="sec"/>
                                <field name="nro_ini"/>
                                <field name="nro_fin"/>
                                <field name="nro_actual"/>
                                <field name="company_id" readonly="1"/>
                                <field name="journal_id"/>
                            </group>
                        </group>
                        <group>
                            <group string="Usuarios habilitados">
                                <field name="user_ids"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Facturas">
                                <field name="invoice_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="ruc_documentos_timbrados_search_view">
            <field name="name">ruc.documentos.timbrados.search</field>
            <field name="model">ruc.documentos.timbrados</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="nro_actual"/>
                    <field name="ultimo_nro_utilizado"/>
                    <filter string="activo" name="activo" domain="[('activo','=',True)]"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ruc_documentos_timbrados">
            <field name="name">Timbrados</field>
            <field name="res_model">ruc.documentos.timbrados</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="context">{ }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Timbrados</p>
            </field>
        </record>

        <menuitem action="action_ruc_documentos_timbrados" id="menu_action_ruc_documentos_timbrados" parent="account.menu_finance_entries" sequence="40" />


    </data>
</odoo>
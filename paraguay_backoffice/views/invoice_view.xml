<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- View action para caja chica-->
         <record model="ir.actions.act_window" id="caja_chica_action">
            <field name="name">Caja Chica</field>
            <field name="res_model">account.move</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_caja_chica': True,'search_default_filtrobra':1,'search_default_filtroestados':1,'default_tipo_comprobante':1,'default_journal_id':2}</field>
            <field name="domain">[("caja_chica","=",True)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear facturas de caja chica
                </p>
            </field>
        </record>

        <record id="invoice_form_cancel_inherit_inh" model="ir.ui.view">
            <field name="name">invoice.form.cancel.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_cancel']" position="replace">
                    <button name="button_cancel" type="object" states="draft,open" string="Cancelar" groups="account.group_account_invoice"/>
                </xpath>
            </field>
        </record>


<!--Herencia factura venta-->
        <record model="ir.ui.view" id="account_invoice_form_inherited">
            <field name="name">account.invoice.form.inh</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="tipo_comprobante" id="tipo_comprobante" attrs="{'readonly':[('state','!=','draft')],'invisible': [('move_type', '=', 'entry')],'required': [('move_type','in',['in_invoice','out_invoice','in_refund','out_refund']),('state','=','draft')]}"/>
                    <field name="codigo_hechauka" invisible="1"/>
                    <field name="tipo_factura" id="tipo_factura" attrs="{'invisible':[('codigo_hechauka', 'not in', (1,3))],'readonly':[('state','!=','draft')]}"/>
                    <field name="cantidad_cuotas" id="cantidad_cuotas" attrs="{'invisible':[('codigo_hechauka', '!=', 1)],'readonly':[('state','!=','draft')]}"/>
                    <field name="factura_afectada" id="factura_afectada" attrs="{'invisible':[('codigo_hechauka', '!=', 3)],'readonly':[('state','!=','draft')]}"  />
                    <field name="timbrado" id="timbrado" attrs="{'invisible':[('move_type', '=', 'entry')],'readonly':[('state','!=','draft')]}"/>
                    <field name="vencimiento_timbrado" attrs="{'invisible':[('move_type', '=', 'entry')],'readonly':[('state','!=','draft')]}"/>
                    <field name="tipo_de_documento" invisible="1" />
                     <field name="tipo_talonario" invisible="1" />
                    <field name="no_mostrar_libro_iva" string="No visualizar en el Libro IVA"/>
                    <field name="autofactura" id="autofactura" attrs="{'invisible':[('codigo_hechauka', '!=', 5)]}" />
                </xpath>
                <xpath expr="//field[@name='fiscal_position_id']" position="after">
                    <field name="linea_asiento_afectada_nc" attrs="{'invisible':[('codigo_hechauka', '!=', 3)],'readonly':[('state','!=','draft')]}" />
                    <field name="linea_asiento_afectada_nc_timbrado" attrs="{'invisible':[('codigo_hechauka', '!=', 3)],'readonly':[('state','!=','draft')]}" />
                </xpath>
	    	    <xpath expr="//field[@name='currency_id']" position="attributes">
                   <attribute name="options">{'no_create': True, 'no_open': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="ruc_factura" readonly="1"/>
                </xpath>
                <xpath expr="//notebook/page[1]/field/tree/field[@name='account_id']" position="replace">
                    <field name="account_id" groups="account.group_account_user" domain="[('company_id', '=', parent.company_id), ('deprecated', '=', False)]"/>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                                <field name="suc" attrs="{'invisible':[('move_type', '=', 'entry')],'readonly':[('state','!=','draft')]}"/>
                                <field name="sec" attrs="{'invisible':[('move_type', '=', 'entry')],'readonly':[('state','!=','draft')]}"/>
                                <field name="nro" attrs="{'invisible':[('move_type', '=', 'entry')],'readonly':[('state','!=','draft')]}" />
                                 <field name="digitointer" invisible="1"/>
                                <field name="nro_factura" string="Numero" attrs="{'invisible':[('move_type', '=', 'entry')],'readonly':[('state','!=','draft')]}"/>
                                <field name="aplicar_descuento"/>
                                <field name="porcentaje_descuento" digits="[12,7]" attrs="{'invisible':[('aplicar_descuento','!=',True)]}"/>
                                <field name="producto_descuento"  attrs="{'invisible':[('aplicar_descuento','!=',True)]}"/>
                                <button name="aplicar_descuento_lineas" string="Aplicar descuento" class="btn btn-info" type="object" attrs="{'invisible':[('aplicar_descuento','!=',True)]}"/>
                                <field name="tipo_cambio_manual"/>
                                <field name="tipo_cambio"/>
                                <button name="aplicar_tipo_cambio_manual" string="Aplicar tipo de cambio" class="btn btn-success" type="object" attrs="{'invisible':[('tipo_cambio_manual','==',0)]}"/>
                </xpath>
            </field>
        </record>

        <record id="paraguay_backoffice_numero_factura_lectura" model="ir.ui.view">
            <field name="name">account.move.numero_factura.readonly</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="paraguay_backoffice.account_invoice_form_inherited" />
            <field name="groups_id" eval="[(6,0, [ref('paraguay_backoffice.limitar_numero_factura')])]" />
            <field name="arch" type="xml">
                <field name="nro_factura" position="attributes">
                  <attribute name="attrs">{'readonly':['|',('move_type','in',('out_refund','out_invoice')),('state','!=','draft')]}</attribute>
                   <attribute name="force_save">1</attribute>
                </field>
                <field name="suc" position="attributes">
                   <attribute name="attrs">{'readonly':1}</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
                <field name="sec" position="attributes">
                   <attribute name="attrs">{'readonly':1}</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
                <field name="nro" position="attributes">
                   <attribute name="attrs">{'readonly':1}</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
            </field>
</record>

        <!-- INherit en campos de factura -->
        <record id="view_account_form_inh" model="ir.ui.view">
            <field name="name">view.account_invoice.inh</field>
            <field name="model">account.move</field>
<!--            <field name="type">form</field>-->
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                        <field name="nro_factura"/>
                </xpath>
            </field>
        </record>

         <record id="view_my_module_account_invoice_search" model="ir.ui.view">
            <field name="name">rapidsoft.base.account.invoice.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='cancel']" position="after">
                    <filter string="Retiene IVA Cliente" name="retiene_iva_cliente" domain="[('retiene_iva_cliente','=', True)]"/>
                </xpath>
                <xpath expr="//group" position="after">
                    <filter string="Tipo de factura" domain="[]" context="{'group_by':'tipo_factura'}" name="groupbytipofactura"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="nro_factura"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">

                    <field name="line_ids" string="Categoria de partner" filter_domain="[('line_ids.partner_id.category_id','ilike',self)]"/>
                    <field name="line_ids" string="Producto" filter_domain="[('line_ids.product_id.name','ilike',self)]"/>
                    <field name="line_ids" string="Categoria producto" filter_domain="[('line_ids.product_id.categ_id.name','ilike',self)]"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="account_te_invoice_form_inherited">
            <field name="name">account.e_invoice.form.inh</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='timbrado']" position="before">
                    <field name="talonario_factura" attrs="{'invisible':['&amp;',('move_type', 'not in', ('out_invoice','out_refund')),('codigo_hechauka','not in',(3,2,5))],'readonly':[('state','!=','draft')]}" domain="[('tipo_documento','=',tipo_talonario),('activo','=',True)]" options="{'no_create': True, 'no_open':True}"/>
                </xpath>
            </field>
        </record>

         <record id="py_account_invoice_search" model="ir.ui.view">
            <field name="name">py.account.invoice.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <filter string="Vencimiento de timbrado" domain="[]" context="{'group_by':'vencimiento_timbrado'}" name="groupbytimbradoven"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

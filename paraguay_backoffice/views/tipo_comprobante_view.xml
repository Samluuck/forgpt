<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    		<record model="ir.ui.view" id="tipo_documento_tree_view">
            <field name="name">tipo.documento.tree</field>
            <field name="model">ruc.tipo.documento</field>
            <field name="arch" type="xml">
                <tree string="Comprobantes">
                    <field name="name"/>
                    <field name="tipo"/>
                   
                    <field name="diario"/>
                    

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tipo_documento_form_view">
            <field name="name">tipo.documento.form</field>
            <field name="model">ruc.tipo.documento</field>
            <field name="arch" type="xml">
                <form string="Comprobantes">

                    <sheet>
                        
                            <group>
                            <field name="name" />
                            <field name="tipo" />
                            <field name="diario"/>
                            <field name="talonaraio"/>
                            <field name="codigo_hechauka"/>
                                <field name="mostrar_libro_iva"/>
                            <field name="comentario"/>


                            </group>


                       

                    </sheet>
                </form>
            </field>
        </record>

          <record model="ir.ui.view" id="tipo_documento_search_view">
            <field name="name">tipo.documento.search</field>
            <field name="model">ruc.tipo.documento</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="tipo"/>

                    <!-- <filter string="activo" name="activo" domain="[('activo','=',True)]"/> -->
                  <!--<group expand="0" string="Group By...">-->
                        <!--<filter string="Proveedor" context="{'group_by':'retenido'}"/>-->
                    <!--</group>-->
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_documentos">
            <field name="name">Tipos de Comprobantes</field>
            <field name="res_model">ruc.tipo.documento</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <!-- <field name="context">{'search_default_vinculado':1}</field> -->
            <field name="context">{ }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Tipos de Comprobantes
                </p>
            </field>
        </record>

        <menuitem action="action_documentos" id="menu_action_documentos" parent="account.menu_finance_entries"  />



    </data>
  </openerp>
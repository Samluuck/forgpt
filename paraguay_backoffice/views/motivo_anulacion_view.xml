<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    		 <record model="ir.ui.view" id="motivo_anulacion_tree_view">
            <field name="name">motivo.anulacion.tree</field>
            <field name="model">ruc.motivo.anulacion</field>
            <field name="arch" type="xml">
                <tree string="Motivo Anulacion">
                    <field name="name"/>
                    <field name="tipo"/>
                    <field name="activo"/>
                    

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="motivo_anulacion_form_view">
            <field name="name">motivo.anulacion.form</field>
            <field name="model">ruc.motivo.anulacion</field>
            <field name="arch" type="xml">
                <form string="Motivo anulacion">

                    <sheet>
                        
                            <group>
                            <field name="name" />
                            <field name="tipo" />
                            <field name="activo"/>
                            <field name="descripcion"/>
                            </group>


                       

                    </sheet>
                </form>
            </field>
        </record>

          <record model="ir.ui.view" id="motivos_search_view">
            <field name="name">motivos.search</field>
            <field name="model">ruc.motivo.anulacion</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="tipo"/>

                    <filter string="activo" name="activo" domain="[('activo','=',True)]"/>
                  <!--<group expand="0" string="Group By...">-->
                        <!--<filter string="Proveedor" context="{'group_by':'retenido'}"/>-->
                    <!--</group>-->
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_motivos">
            <field name="name">Motivos de Anulacion</field>
            <field name="res_model">ruc.motivo.anulacion</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <!-- <field name="context">{'search_default_vinculado':1}</field> -->
            <field name="context">{ }</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Motivos Anulacion
                </p>
            </field>
        </record>

        <menuitem action="action_motivos" id="menu_action_motivos" parent="account.menu_finance_entries"  />


    </data>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.module.category" id="paraguay_backoffice">
            <field name="name">Odoo Paraguay</field>
        </record>

    <!--Grupo para hacer solo lectura campos de números de factura-->
    <record id="limitar_numero_factura" model="res.groups">
        <field name="name">Número de factura de solo lectura</field>
        <field name="category_id" ref="paraguay_backoffice.paraguay_backoffice"/>

    </record>
<!--Grupo para limitar talonarios por usuario-->
    <record id="limitar_talonarios" model="res.groups">
        <field name="name">Limitar talonarios de factura</field>
        <field name="category_id" ref="paraguay_backoffice.paraguay_backoffice"/>
    </record>

<!--Grupo para generar remisiones-->
    <record id="group_picking_remision" model="res.groups">
        <field name="name">Picking remisiones</field>
        <field name="category_id" ref="paraguay_backoffice.paraguay_backoffice"/>
    </record>
</odoo>
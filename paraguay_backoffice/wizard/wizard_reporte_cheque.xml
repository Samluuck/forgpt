<odoo>
    <data>
        <record id="wizard_cheques" model="ir.ui.view">
            <field name="name">paraguay_backoffice.wizard.cheques</field>
            <field name="model">paraguay_backoffice.wizard.cheques</field>
            <field name="arch" type="xml">
                <form string="Filtros">
                    <group>
                        <field name="tipo" />
                        <field name="fecha_inicio"  attrs="{'required': [('tipo','=','terceros')]}" />
                        <field name="fecha_fin" attrs="{'required': [('tipo','=','terceros')]}"/>
                        <field name="chequera" attrs="{'invisible': [('tipo','=','terceros')]}" options="{'no_create_edit': True, 'no_create': True,'no_open':True}" />
                        <field name="banco" attrs="{'invisible': [('tipo','=','propio')]}" options="{'no_create_edit': True, 'no_create': True,'no_open':True}"/>
                        <field name="company_id" invisible="1"/>
                    </group>

                    <footer>
                        <button class="btn-primary" name="check_report" string="Generar" type="object"/>
                        <button string="Cancelar" special="cancel" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="cheques_wizard_action_id" model="ir.actions.act_window">
            <field name="name">Reporte Cheques</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">paraguay_backoffice.wizard.cheques</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_cheques"/>
            <field name="target">new</field>

        </record>

        <menuitem id="reporte_cheques_id" parent="account.menu_finance_reports" name="Reporte de Cheques" action="cheques_wizard_action_id" sequence="101"/>

    </data>
</odoo>
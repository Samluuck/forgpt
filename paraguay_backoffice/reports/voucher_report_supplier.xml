                                <td style="border-right: 1px solid black;border-top:none;padding: 50px">Fecha:</td>
                                <td style="border-right: 1px solid black;border-top:none;padding: 50px">
                                  <p>Aclaración</p>
                                   <br>
                                   </br>
                                   <p>C.I.:</p>
                                </td>
                              </tr>

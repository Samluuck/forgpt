<odoo>
    <template id="voucher_report_supplier">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="header" >

                                <!--<span t-field="res_company.name"/>-->
                          <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"  style="width: 6cm; height:4cm;"/>


                        <div class="col-4 pull-right fecha">
                            <p>Fecha:
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                            </p>
                            <span>Pag:</span>
                            <span class="page"/>
                            de
                            <span class="topage"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <h3>Orden de Pago -
                                <span t-field="o.number"/>
                            </h3>
                        </div>
                    </div>
                    <link rel="stylesheet" href="/paraguay_backoffice/static/src/css/voucher.css"/>
                    <div class="page">
                        <div class="row ">
                                <div class="col-6">
                                    <p>Empresa:
                                        <span t-field="o.partner_id.name"/>
                                    </p>
                                    <p>Pago:
                                        <span t-field="o.pay_now"/>
                                    </p>
                                    <p>Metodo de Pago:
                                        <span t-field="o.payment_journal_id.name"/>
                                    </p>
                                    <p>Referencia de la Factura:
                                        <span t-field="o.reference"/>
                                    </p>
                                </div>

                            <div class="col-6">
                                <p>Fecha:
                                    <span t-field="o.date"/>
                                </p>
                                <p>Referencia del Pago:
                                    <span t-field="o.name"/>
                                </p>

                            </div>
                        </div>


                        TABLA PARA EL REPORTE DE CHEQUES PROPIOS

                        <table class=" sin-borde">
                            <thead>
                                <tr class="active">
                                    <th>Producto</th>
                                    <th>Descripcion</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unitario</th>
                                    <th>Importe</th>
                                </tr>
                            </thead>

                            <tbody>

                                <t t-foreach="o.line_ids" t-as="l">
                                    <tr>
                                        <t t-if="l.product_id">
                                            <td>
                                                <span t-field="l.product_id.display_name"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td/>
                                        </t>

                                        <td>
                                            <span t-field="l.name"/>
                                        </td>
                                        <td>
                                            <span t-field="l.quantity"/>
                                        </td>
                                        <td>
                                            <span t-esc="o.agregar_punto_de_miles(l.price_unit)"/>
                                        </td>
                                        <td>
                                            <span t-esc="o.agregar_punto_de_miles(l.price_subtotal)"/>
                                        </td>

                                    </tr>
                                </t>
                                <tr class="negrita totales">
                                    <td colspan="4">Total</td>
                                    <td class="derecha">
                                        <span t-esc="o.agregar_punto_de_miles(o.amount)"/>
                                    </td>
                                </tr>

                            </tbody>

                        </table>
                        <t t-if="o.check_id">
                            <br/>
                            <br/>

                            <h5>Datos del Cheque</h5>
                        <table class=" sin-borde">
                            <thead>
                                <tr class="active">
                                    <th>Numero</th>
                                    <th>Empresa</th>
                                    <th>Monto</th>

                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td><span t-field="o.check_id.number"/> </td>
                                    <t t-if="o.check_id.a_nombre_de">
                                        <td><span t-field="o.check_id.a_nombre_de"/></td>
                                    </t>
                                    <t t-elif="o.check_id.pago_voucher.partner_id">
                                        <td><span t-field="o.check_id.pago_voucher.partner_id.name"/></td>
                                    </t>
                                    <t t-else="">
                                        <td/>
                                    </t>
                                    <td>
                                        <span t-esc="o.agregar_punto_de_miles(o.check_id.amount)"/>
                                    </td>

                                </tr>
                            </tbody>

                        </table>
                        </t>
                        <br/>
                        <br/>
                        <br/>
                          <table class="table" style="border:1px solid black; height: auto">
                              <tr>
                                <td style="border-right: 1px solid black;border-top:none;padding: 50px"><span t-field="o.create_uid"/></td>

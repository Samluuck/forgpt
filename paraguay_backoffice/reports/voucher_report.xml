<odoo>
    <template id="voucher_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="header">
                        <div class="col-6">
                            <h3>
                                <span t-field="res_company.name"/>
                            </h3>
                        </div>
                        <!--Fecha y paginacion de hoja-->
                        <div class="col-4 pull-right fecha">
                            <p>Fecha:
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                            </p>
                            <span>Pag:</span>
                            <span class="page"/>
                            de
                            <span class="topage"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <h3>Recibo Interno -
                                <span t-field="o.number"/>
                            </h3>
                        </div>
                    </div>

                    <link rel="stylesheet" href="/paraguay_backoffice/static/src/css/voucher.css"/>
                    <div class="page">
                        <div class="row ">

                                <div class="col-6">
                                    <p>Empresa:
                                        <span t-field="o.partner_id.name"/>
                                    </p>
                                    <p>Pago:
                                        <span t-field="o.pay_now"/>
                                    </p>
                                    <p>Metodo de Pago:
                                        <span t-field="o.payment_journal_id.name"/>
                                    </p>
                                    <p>Referencia de la Factura:
                                        <span t-field="o.reference"/>
                                    </p>
                                </div>

                            <div class="col-6">
                                <p>Fecha:
                                    <span t-field="o.date"/>
                                </p>
                                <p>Referencia del Pago:
                                    <span t-field="o.name"/>
                                </p>

                            </div>
                        </div>


                        <!--TABLA PARA EL REPORTE DE CHEQUES PROPIOS-->

                        <table class=" sin-borde">
                            <thead>
                                <tr class="active">
                                    <th>Producto</th>
                                    <th>Descripcion</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unitario</th>
                                    <th>Importe</th>
                                </tr>
                            </thead>

                            <tbody>

                                <t t-foreach="o.line_ids" t-as="l">
                                    <tr>
                                        <t t-if="l.product_id">
                                            <td>
                                                <span t-field="l.product_id.display_name"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td></td>
                                        </t>

                                        <td>
                                            <span t-field="l.name"/>
                                        </td>
                                        <td>
                                            <span t-field="l.quantity"/>
                                        </td>
                                        <td>
                                            <span t-esc="o.agregar_punto_de_miles(l.price_unit)"/>
                                        </td>
                                        <td>
                                            <span t-esc="o.agregar_punto_de_miles(l.price_subtotal)"/>
                                        </td>

                                    </tr>
                                </t>
                                <tr class="negrita totales">
                                    <td colspan="4">Total</td>
                                    <td class="derecha">
                                        <span t-esc="o.agregar_punto_de_miles(o.amount)"/>
                                    </td>
                                </tr>

                            </tbody>

                        </table>
                        <br/>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-6">
                                <b>
                                    <span>Recibo por:</span>
                                </b>
                            </div>
                            <div class="col-6">
                                <b>
                                    <span>Aclaracion:</span>
                                </b>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="col-6">
                                <b>
                                    <span>Autorizado por:</span>
                                </b>
                            </div>
                            <div class="col-6">
                                <b>
                                    <span>Aclaracion:</span>
                                </b>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>


    </template>
</odoo>
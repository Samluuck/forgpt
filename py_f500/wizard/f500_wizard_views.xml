<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form del Wizard F500 -->
    <record id="view_f500_wizard_form" model="ir.ui.view">
        <field name="name">f500.wizard.form</field>
        <field name="model">f500.wizard</field>
        <field name="arch" type="xml">
            <form string="Formulario 500 IRE">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span>Formulario 500 - IRE Régimen General</span>
                        </h1>
                    </div>
                    <group>
                        <group name="company_data" string="Datos de la Empresa">
                            <field name="company_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="ruc" readonly="1"/>
                            <field name="razon_social" readonly="1"/>
                        </group>
                        <group name="period_data" string="Período Fiscal">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="exercise_year" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group name="declaration_data" string="Tipo de Declaración">
                            <field name="declaration_type"/>
                            <field name="rectified_order" attrs="{'invisible': [('declaration_type', '!=', '02')], 'required': [('declaration_type', '=', '02')]}"/>
                        </group>
                        <group name="complementary_data" string="Información Complementaria">
                            <field name="contador_ruc"/>
                            <field name="auditor_ruc"/>
                            <field name="total_empleados"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Información" name="info">
                            <group>
                                <group>
                                    <field name="state" invisible="1"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <p><strong>Instrucciones:</strong></p>
                                <ul>
                                    <li>Seleccione la compañía y el período fiscal para el cual desea generar el Formulario 500.</li>
                                    <li>El sistema extraerá automáticamente los datos contables del período seleccionado.</li>
                                    <li>Los códigos de cuenta utilizados siguen el plan de cuentas estándar paraguayo.</li>
                                    <li>El impuesto se calcula con una tasa del 10% sobre la renta neta.</li>
                                    <li>Una vez generado, podrá descargar el archivo Excel.</li>
                                </ul>
                            </div>
                        </page>
                        <page string="Archivo Generado" name="file" attrs="{'invisible': [('state', '=', 'draft')]}">
                            <group>
                                <field name="file_name" readonly="1"/>
                                <field name="file_data" filename="file_name" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_generate_f500"
                            string="Generar Formulario 500"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'done')]}"/>
                    <button name="action_download_file"
                            string="Descargar Archivo"
                            type="object"
                            class="btn-success"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del Wizard -->
    <record id="action_f500_wizard" model="ir.actions.act_window">
        <field name="name">Generar Formulario 500 IRE</field>
        <field name="res_model">f500.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>

</odoo>

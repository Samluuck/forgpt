<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_f500_category_tree" model="ir.ui.view">
        <field name="name">f500.category.tree</field>
        <field name="model">f500.category</field>
        <field name="arch" type="xml">
            <tree string="Categorías F500">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="f500_cell"/>
                <field name="f500_section"/>
                <field name="category_type"/>
                <field name="operation"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_f500_category_form" model="ir.ui.view">
        <field name="name">f500.category.form</field>
        <field name="model">f500.category</field>
        <field name="arch" type="xml">
            <form string="Categoría F500">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="ej. Ventas de Bienes Comerciales"/>
                        </h1>
                    </div>
                    <group>
                        <group name="basic_info" string="Información Básica">
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="parent_id"/>
                        </group>
                        <group name="f500_info" string="Información F500">
                            <field name="f500_cell"/>
                            <field name="f500_section"/>
                            <field name="category_type"/>
                            <field name="operation"/>
                        </group>
                    </group>
                    <group string="Descripción">
                        <field name="description" nolabel="1" placeholder="Descripción detallada de la categoría..."/>
                    </group>
                    <notebook>
                        <page string="Sub-categorías" name="children">
                            <field name="child_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="f500_cell"/>
                                    <field name="category_type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_f500_category_search" model="ir.ui.view">
        <field name="name">f500.category.search</field>
        <field name="model">f500.category</field>
        <field name="arch" type="xml">
            <search string="Buscar Categorías F500">
                <field name="name"/>
                <field name="code"/>
                <field name="f500_cell"/>
                <filter string="Ingresos" name="income" domain="[('category_type', '=', 'income')]"/>
                <filter string="Costos" name="cost" domain="[('category_type', '=', 'cost')]"/>
                <filter string="Gastos" name="expense" domain="[('category_type', '=', 'expense')]"/>
                <separator/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Rubro" name="group_section" context="{'group_by': 'f500_section'}"/>
                    <filter string="Tipo" name="group_type" context="{'group_by': 'category_type'}"/>
                    <filter string="Categoría Padre" name="group_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_f500_category" model="ir.actions.act_window">
        <field name="name">Categorías F500</field>
        <field name="res_model">f500.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva Categoría F500
            </p>
            <p>
                Las categorías F500 se utilizan para clasificar las cuentas contables<br/>
                según las casillas del Formulario 500 del SET.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_f500_category"
              name="Categorías F500"
              parent="account.menu_finance_configuration"
              action="action_f500_category"
              sequence="50"/>

</odoo>
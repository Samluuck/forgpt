<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend Account Form View -->
    <record id="view_account_form_f500" model="ir.ui.view">
        <field name="name">account.account.form.f500</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_ids']" position="after">
                <field name="f500_category_id" 
                       options="{'no_create': True, 'no_open': True}"
                       domain="[('active', '=', True)]"/>
                <field name="f500_cell" readonly="1"/>
                <field name="f500_category_type" invisible="1"/>
                <field name="f500_operation" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Extend Account Tree View -->
    <record id="view_account_tree_f500" model="ir.ui.view">
        <field name="name">account.account.tree.f500</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="f500_category_id" optional="hide"/>
                <field name="f500_cell" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Extend Account Search View - Versión ULTRA SIMPLE -->
    <record id="view_account_search_f500" model="ir.ui.view">
        <field name="name">account.account.search.f500</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_search"/>
        <field name="arch" type="xml">
            <!-- Solo agregar campos de búsqueda -->
            <field name="name" position="after">
                <field name="f500_category_id"/>
                <field name="f500_cell"/>
            </field>
        </field>
    </record>

</odoo>
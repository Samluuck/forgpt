<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del formulario wizard -->
        <record id="view_informe_rendimiento_wizard_form" model="ir.ui.view">
            <field name="name">informe.rendimiento.wizard.form</field>
            <field name="model">informe.rendimiento.wizard</field>
            <field name="arch" type="xml">
                <form string="Informe de Rendimiento">
                    <group>
                        <group string="Filtros de Fecha">
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                               <group string="Filtros de Usuarios">
                                   <field name="todos_empleados"/>
                                   <field name="user_ids" widget="many2many_tags"
                                          attrs="{'invisible': [('todos_empleados', '=', True)], 'required': [('todos_empleados', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Filtros de Proyectos">
                            <field name="solo_proyectos_con_horas"/>
                            <field name="project_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('estado', '=', 'borrador')]}">
                        <field name="estado" invisible="1"/>
                        <field name="excel_filename" invisible="1"/>
                        <field name="excel_file" filename="excel_filename" widget="binary"/>
                    </group>
                    <footer>
                        <button name="generar_reporte"
                                string="Generar Reporte"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('estado', '=', 'generado')]}"/>
                               
                        <button string="Cerrar"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción del wizard -->
        <record id="action_informe_rendimiento_wizard" model="ir.actions.act_window">
            <field name="name">Informe de Rendimiento</field>
            <field name="res_model">informe.rendimiento.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menú en el módulo de Parte de Horas -->
        <menuitem id="menu_informe_rendimiento"
                  name="Informe de Rendimiento"
                  parent="hr_timesheet.timesheet_menu_root"
                  action="action_informe_rendimiento_wizard"
                  sequence="100"/>

    </data>
</odoo>

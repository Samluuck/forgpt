<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Agregar configuración en ajustes de RRHH -->
        <record id="res_config_settings_view_form_inherit_timesheet_reminder" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit.timesheet.reminder</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Recordatorio Timesheet" string="Recordatorio Timesheet" data-key="timesheet_reminder">
                        <h2>Recordatorio Timesheet</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="group_timesheet_reminder" widget="boolean_toggle"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="group_timesheet_reminder"/>
                                    <div class="text-muted">
                                        Activar recordatorios automáticos diarios para cargar timesheet
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
        <record id="envio_lotes_tree_view" model="ir.ui.view">
            <field name="name">envio.lotes.tree</field>
            <field name="model">envio.lotes</field>
            <field name="arch" type="xml">
                <tree string="Envios DE por Lotes">
                    <field name="name"/>
                    <field name="tipo"/>
                    <field name="numero_lote"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


    </data>

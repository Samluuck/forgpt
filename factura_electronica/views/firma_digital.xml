<odoo>
    <data>


        <record model="ir.ui.view" id="firma_digital">
            <field name="name">firma.digital</field>
            <field name="model">firma.digital</field>
            <field name="arch" type="xml">
                <form string="Firma Digital">
                    <header>
<!--                        <button name="activar" string="Activar" type="object" class="oe_highlight" attrs="{'invisible':[('estado', 'not in', ['borrador'])]}" />-->
                        <button name="pasar_borrador" string="Pasar a Borrador" type="object"  attrs="{'invisible':[('estado', 'not in', ['activo'])]}" />
                        <field name="estado" widget="statusbar"/>
                        <button name="%(open_add_pass)d" string="Activar" type="action" class="oe_highlight" attrs="{'invisible':[('estado', 'not in', ['borrador'])]}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                            <field name="name" attrs="{'readonly':[('estado', 'in', ['activo', 'expirado'])]}"/>
                            <field name="file"  filename="name" attrs="{'readonly':[('estado', 'in', ['activo', 'expirado'])]}"/>
                            <field name="folder"/>
                            <field name="user_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="company_id" readonly="1" force_save="1"/>
                            </group>

                            <group attrs="{'invisible':[('estado','=','borrador')]}" >
                                <field name="public_key"/>
                                <field name="private_key"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="firma_digital_tree_view">
            <field name="name">firma.digital.tree</field>
            <field name="model">firma.digital</field>
            <field name="arch" type="xml">
                <tree string="Firma Electronica">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="estado"/>
                    <field name="company_id" string="Compañia"/>
                </tree>
            </field>
        </record>

        <record id="view_account_recibo_search" model="ir.ui.view">
            <field name="name">firma.digital.search</field>
            <field name="model">firma.digital</field>
            <field name="arch" type="xml">
                <search string="Firma Digital">
                    <field name="name" filter_domain="[('name','ilike',self)]" string="Nombre"/>
                    <separator/>
                    <field name="date_start" string="Fecha Inicio"/>
                    <field name="date_end" string="Fecha Fin"/>
                    <field name="company_id" groups="base.group_multi_company" string="Compañia"/>
                    <separator/>

                    <filter string="Borrador" domain="[('estado','=','borrador')]" name='estado_borrador'/>
                    <filter string="Activo" domain="[('estado','=','activo')]" name='estado_activo'/>
                    <filter string="Vencido" domain="[('estado','=','vencido')]" name='estado_vencido'/>
                    <separator/>
                    <filter string="Estado" domain="[]" context="{'group_by': 'estado'}" name="estado"/>
                    <filter string="Compañia" domain="[]" context="{'group_by': 'company_id'}" name="company_id"
                            groups="base.group_multi_company"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_firma_digital">
            <field name="name">Firma Digital</field>
            <field name="res_model">firma.digital</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Firma Digital
                </p>
            </field>
        </record>

        <menuitem id="menu_firma_digital" name="Firma Digital" action="action_firma_digital"  parent="base.menu_users"
                  />


    </data>
</odoo>
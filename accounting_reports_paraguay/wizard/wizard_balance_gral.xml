<odoo>
    <data>
        <record id="reporte_balance" model="ir.ui.view">
            <field name="name">balance.wizard.balance</field>
            <field name="model">balance.wizard.balance</field>
            <field name="arch" type="xml">
               <form>
                  <group>

                      <field name="fecha_inicio" required="True"/>
                      <field name="fecha_fin" required="True"/>
                      <field name="company_id" invisible="1"/>
                      <field name="ver_ingre_gas" invisible="0"/>
                      <field name="no_ver_comparativo"/>
<!--                        <field name="ver_borrador"/>-->
                  </group>


                   <footer>
                       <button name="check_report" type="object" string="EXPORTAR A PDF" class="oe_highlight"/>
                       o
                       <button name="print_xls" type="object" string="EXPORTAR A XLSX" />
                       <!--<button name="print_report_xlsx" type="object" string="Generar Xlsx" class="oe_highlight"/>-->
                       o
                       <button string="Cancelar" special="cancel"/>
                   </footer>
               </form>
            </field>
        </record>

        <record id="action_reporte_balance" model="ir.actions.act_window">
            <field name="name">Balance </field>
            <field name="res_model">balance.wizard.balance</field>
<!--            <field name="type">ir.actions.act_window</field>-->
<!--            <field name="view_type">form</field>-->
<!--            <field name="view_mode">form</field>-->
            <field name="view_id" ref="reporte_balance"/>
            <field name="target">new</field>
        </record>



    </data>
</odoo>
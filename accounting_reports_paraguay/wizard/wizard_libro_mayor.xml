<odoo>
    <data>
       <record id="reporte_libro_mayor" model="ir.ui.view">
            <field name="name">libro_mayor.wizard.libro_mayor</field>
            <field name="model">libro_mayor.wizard.libro_mayor</field>
            <field name="arch" type="xml">
               <form>
                   <group>
                       <field name="desde" required="1"/>
                       <field name="hasta" required="1"/>
                   </group>
                   <group string="Otros Filtros">
                       <field name="account_ids" widget="many2many_tags"/>
                       <field name="partner_id" />
                       <field name="company_id" invisible="1"/>
                       <field name="mostrar_cuenta_analitica" string="Mostrar cuenta analitica"/>
                       <field name="mostrar_filtro" string="Mostrar Fecha de Impresion"/>
                       <field name="mostrar_titulo" attrs="{'invisible':[('tipo','!=','pdf')]}"/>
                       <field name="mostrar_fecha"  string="Mostrar Filtro de Fecha" attrs="{'invisible':[('tipo','!=','pdf')]}"/>
                   </group>
                   <group>
                       <field name="tipo"/>
                   </group>
                  <group string="Otros Filtros" attrs="{'invisible':[('tipo','!=','xlsx')]}">
                        <field name="mostrar_empresa"/>
                        <field name="mostrar_monedas"/>
                   </group>
                   <footer>
                       <button name="check_report" type="object" string="Generar" class="oe_highlight"/>
                       <button string="Cancelar" special="cancel"/>
                   </footer>
               </form>
            </field>
        </record>

        <record id="action_reporte_libro_mayor" model="ir.actions.act_window">
            <field name="name">Reporte Libro Mayor </field>
            <field name="res_model">libro_mayor.wizard.libro_mayor</field>
<!--            <field name="type">ir.actions.act_window</field>-->
<!--            <field name="view_type">form</field>-->
<!--            <field name="view_mode">form</field>-->
            <field name="view_id" ref="reporte_libro_mayor"/>
            <field name="target">new</field>
<!--            <field name="no_destroy">True</field>-->
        </record>

    </data>
</odoo>
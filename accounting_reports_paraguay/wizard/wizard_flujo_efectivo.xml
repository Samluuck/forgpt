<odoo>
    <data>
        <record id="reporte_flujo_caja_wizard" model="ir.ui.view">
            <field name="name">flujo_efectivo.wizard</field>
            <field name="model">flujo_efectivo.wizard</field>
            <field name="arch" type="xml">
               <form>
                  <group>

                      <field name="fecha_inicio" required="True"/>
                      <field name="fecha_fin" required="True"/>
                      <field name="company_id" invisible="1"/>

                  </group>


                   <footer>
                       <button name="check_report" type="object" string="Generar PDF" class="oe_highlight"/>
                       <button name="print_report_xlsx" type="object" string="Generar Xlsx" class="oe_highlight"/>
                       <button string="Cancelar" special="cancel"/>
                   </footer>
               </form>
            </field>
        </record>

        <record id="action_reporte_flujo_efectivo" model="ir.actions.act_window">
            <field name="name">Flujo de Efectivo </field>
            <field name="res_model">flujo_efectivo.wizard</field>
<!--            <field name="type">ir.actions.act_window</field>-->
<!--            <field name="view_type">form</field>-->
<!--            <field name="view_mode">form</field>-->
            <field name="view_id" ref="reporte_flujo_caja_wizard"/>
<!--            <field name="target">new</field>-->
        </record>



    </data>
</odoo>

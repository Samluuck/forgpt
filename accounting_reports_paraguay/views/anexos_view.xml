<odoo>
    <data>
        <record model="ir.ui.view" id="anexo3_tree_view">
            <field name="name">anexo3.tree</field>
            <field name="model">account_reports_paraguay.anexo3</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="anexo3_form_view" model="ir.ui.view">
            <field name="name">account_reports_paraguay.anexo3.form</field>
            <field name="model">account_reports_paraguay.anexo3</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                        <button name="actualizar_cuentas" string="Actualizar con cuentas predeterminadas" type="object" class="btn-primary"/>
                        <notebook>
                            <page string="Flujo de Efectivo por Actividades Operativas">
                                <notebook>
                                    <page string="Ventas Netas">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_clientes" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_anticipos_clientes" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_tarjetas_credito" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="ventas" widget="many2many" style="width: 80%;"/>
                                                    <field name="descuentos_concedidos" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_anticipo_clientes" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_clientes" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_tarjetas_credito" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <!-- Nuevos campos para Saldo Inicial y Final de Otras Cuentas en Ventas -->
<!--                                                <group colspan="3">-->
<!--                                                    <field name="saldo_inicial_otras_cuentas_ventas" widget="many2many" style="width: 80%;"/>-->
<!--                                                    <field name="saldo_final_otras_cuentas_ventas" widget="many2many" style="width: 80%;"/>-->
<!--                                                </group>-->
                                                <group colspan="3">
                                                    <field name="saldo_inicial_otras_cuentas_ventas" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otras_cuentas_ventas" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Pago a Proveedores Locales">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_anticipo_proveedores" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_proveedores_locales" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_gastos_pagados_adelantado" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_otros_acreedores" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_mercaderias" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="costo_ventas" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_anticipo_proveedores" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_proveedores_locales" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_gastos_pagados_adelantado" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otros_acreedores" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_mercaderias" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_otras_cuentas_pago_proveedores_locales" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otras_cuentas_pago_proveedores_locales" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Pago a Proveedores del Exterior">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_anticipo_proveedores_exterior" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_proveedores_exterior" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_gastos_pagados_adelantado_exterior" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_mercaderias_exterior" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="costo_ventas_exterior" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_anticipo_proveedores_exterior" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_proveedores_exterior" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_gastos_pagados_adelantado_exterior" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_mercaderias_exterior" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_otras_cuentas_pago_proveedores_exterior" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otras_cuentas_pago_proveedores_exterior" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Efectivo Pagado a Empleados">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_obligaciones_laborales" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_obligaciones_laborales" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="sueldos_jornales" widget="many2many" style="width: 80%;"/>
                                                    <field name="aporte_patronal" widget="many2many" style="width: 80%;"/>
                                                    <field name="aguinaldos" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Efectivo Generado (Usado) por Otras Actividades Operativas">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="agua_luz_telefono_internet" widget="many2many" style="width: 80%;"/>
                                                    <field name="alquileres_pagados" widget="many2many" style="width: 80%;"/>
                                                    <field name="combustibles_lubricantes" widget="many2many" style="width: 80%;"/>
                                                    <field name="comisiones_gastos_bancarios" widget="many2many" style="width: 80%;"/>
                                                    <field name="comisiones_sobre_ventas" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="donaciones_contribuciones" widget="many2many" style="width: 80%;"/>
                                                    <field name="fletes_pagados" widget="many2many" style="width: 80%;"/>
                                                    <field name="gastos_cobranzas" widget="many2many" style="width: 80%;"/>
                                                    <field name="gastos_representacion" widget="many2many" style="width: 80%;"/>
                                                    <field name="gastos_pagados_exterior" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="honorarios_profesionales" widget="many2many" style="width: 80%;"/>
                                                    <field name="juicios_gastos_judiciales" widget="many2many" style="width: 80%;"/>
                                                    <field name="movilidad" widget="many2many" style="width: 80%;"/>
                                                    <field name="otros_gastos_ventas" widget="many2many" style="width: 80%;"/>
                                                    <field name="publicidad_propaganda" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="remuneracion_personal_superior" widget="many2many" style="width: 80%;"/>
                                                    <field name="reparacion_mantenimiento" widget="many2many" style="width: 80%;"/>
                                                    <field name="seguros_pagados" widget="many2many" style="width: 80%;"/>
                                                    <field name="utiles_oficina" widget="many2many" style="width: 80%;"/>
                                                    <field name="viaticos_vendedores" widget="many2many" style="width: 80%;"/>
                                                    <field name="gastos_no_deducibles" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                 <group colspan="3">
                                                    <field name="saldo_inicial_otras_cuentas_activo" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otras_cuentas_pasivo" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otras_cuentas_activo" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_otras_cuentas_pasivo" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Pago de Impuestos">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_anticipos_retenciones" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_anticipos_retenciones" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_sset" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_sset" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_iva_credito_fiscal" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_iva_credito_fiscal" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_iva_pagar" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_iva_pagar" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_retencion_iva_credito" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_retencion_iva_credito" widget="many2many" style="width: 80%;"/>
                                                    <field name="impuesto_ejercicio" widget="many2many" style="width: 80%;"/>
                                                    <field name="pago_impuesto_renta" widget="many2many" style="width: 80%;"/>
                                                    <field name="multas" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_otras_cuentas_pago_impuestos" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otras_cuentas_pago_impuestos" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>
                                </notebook>
                            </page>
                            <page string="Flujo de Efectivo por Actividades de Inversión">
                                <notebook>
                                    <page string="Aumento/Disminución Neto/a de Inversiones Temporarias">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_inversiones_temporarias" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_otros_activos_corto_plazo" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_inversiones_temporarias" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otros_activos_corto_plazo" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Aumento/Disminución Neto/a de Inversiones a Largo Plazo">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_inversiones_largo_plazo" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_otros_activos_largo_plazo" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_inversiones_largo_plazo" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otros_activos_largo_plazo" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otras_cuentas_inversiones_largo_plazo" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Aumento/Disminución Neto/a de Propiedad, Planta y Equipo">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_propiedad_planta_equipo" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_activos_intangibles" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_cargos_diferidos" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_reservas_revaluo" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="depreciaciones_ejercicio" widget="many2many" style="width: 80%;"/>
                                                    <field name="amortizacion_ejercicio" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_propiedad_planta_equipo" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_activos_intangibles" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_cargos_diferidos" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_reservas_revaluo" widget="many2many" style="width: 80%;"/>
                                                    <field name="utilidad_perdida_venta_activos_fijos" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_otras_cuentas_inversiones_temporarias" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_otras_cuentas_inversiones_temporarias" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>
                                </notebook>
                            </page>
                            <page string="Flujo de Efectivo por Actividades de Financiamiento">
                                <notebook>
                                    <page string="Aporte de Capital">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_capital" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_capital" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Aumento/Disminución Neto/a de Préstamos">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_prestamos" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_prestamos" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Dividendos Pagados">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_resultado_acumulado" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_inicial_dividendos_pagar" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_resultado_acumulado" widget="many2many" style="width: 80%;"/>
                                                    <field name="saldo_final_dividendos_pagar" widget="many2many" style="width: 80%;"/>
                                                </group>
                                            </group>
                                        </group>
                                    </page>

                                    <page string="Aumento/Disminución Neto/a de Intereses">
                                        <group>
                                            <group>
                                                <group colspan="3">
                                                    <field name="saldo_inicial_intereses_pagar" widget="many2many" style="width: 80%;"/>
                                                </group>
                                                <group colspan="3">
                                                    <field name="saldo_final_intereses_pagar" widget="many2many" style="width: 80%;"/>

                           <field name="otras_reservas" widget="many2many" style="width: 80%;"/>
                           <field name="resultados_acumulados" style="width: 80%;"/>
                           <field name="resultados_del_ejercicio" style="width: 80%;"/>
                           <field name="dividendos_a_pagar" style="width: 80%;"/>
                       </group>
                   </sheet>
                    </form>
            </field>
        </record>

        <record id="action_anexo_4" model="ir.actions.act_window">
            <field name="name">Action Anexo 4 Res. 49</field>
            <field name="res_model">account_reports_paraguay.anexo4</field>
            <field name="type">ir.actions.act_window</field>
